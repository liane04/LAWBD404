@{
    ViewData["Title"] = "Apagar Anúncio";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="delete-container card text-center shadow-lg">
                <div class="card-body p-4 p-md-5">
                    <i class="bi bi-exclamation-triangle-fill text-danger display-3 mb-3"></i>
                    <h2 class="card-title">Confirmar Remoção</h2>
                    <p class="text-muted">Tem a certeza que pretende apagar permanentemente o seu anúncio? Esta ação não pode ser revertida.</p>

                    <div class="anuncio-summary-delete my-4">
                        <h5 class="mb-1">BMW Série 3 320d Pack M</h5>
                        <p class="text-muted mb-0">Preço: 28.500 €</p>
                    </div>

                    <form>
                        <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                            <button type="submit" class="btn btn-danger btn-lg">Sim, Apagar Anúncio</button>
                            <a href="#" class="btn btn-outline-secondary btn-lg">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>