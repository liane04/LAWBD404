@model Marketplace.Models.Anuncio

@{
    ViewData["Title"] = "Destacar Anúncio";
}

<!-- Breadcrumb Navigation -->
<nav aria-label="breadcrumb" class="bg-light border-bottom">
    <div class="container">
        <ol class="breadcrumb py-3 mb-0">
            <li class="breadcrumb-item"><a href="/"><i class="bi bi-house-door-fill me-1"></i>Início</a></li>
            <li class="breadcrumb-item"><a href="/Anuncios">Anúncios</a></li>
            <li class="breadcrumb-item"><a href="/Anuncios/Details/@Model.Id">Detalhes</a></li>
            <li class="breadcrumb-item active" aria-current="page">Destacar Anúncio</li>
        </ol>
    </div>
</nav>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Header com ícone -->
            <div class="text-center mb-4">
                <div class="mb-3">
                    <i class="bi bi-star-fill text-warning" style="font-size: 4rem;"></i>
                </div>
                <h1 class="h2 mb-2">Destacar o seu Anúncio</h1>
                <p class="text-muted">Aumente a visibilidade do seu veículo</p>
            </div>

            <!-- Card do Anúncio -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            @if (Model.Imagens != null && Model.Imagens.Any())
                            {
                                <img src="@Model.Imagens.First().ImagemCaminho"
                                     alt="@Model.Titulo"
                                     class="img-fluid rounded"
                                     style="width: 100%; height: 150px; object-fit: cover;">
                            }
                            else
                            {
                                <img src="~/imagens/no-image.png"
                                     alt="Sem imagem"
                                     class="img-fluid rounded"
                                     style="width: 100%; height: 150px; object-fit: cover;">
                            }
                        </div>
                        <div class="col-md-8">
                            <h4 class="mb-2">@Model.Titulo</h4>
                            <p class="text-muted mb-2">
                                <i class="bi bi-calendar3 me-1"></i>@Model.Ano
                                <span class="mx-2">|</span>
                                <i class="bi bi-speedometer2 me-1"></i>@(Model.Quilometragem?.ToString("N0") ?? "N/A") km
                            </p>
                            <h3 class="text-primary mb-0">@Model.Preco.ToString("C")</h3>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Informações do Destaque -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-star-fill me-2"></i>Plano de Destaque</h5>
                </div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h4 class="mb-3">Destaque Premium - 30 Dias</h4>
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Apareça no topo das listagens</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Badge "Destaque" visível no anúncio</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Maior visibilidade para compradores</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Venda mais rápido</li>
                            </ul>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="p-3 bg-light rounded">
                                <p class="text-muted mb-1">Valor do Destaque</p>
                                <h2 class="text-warning mb-0">1,99€</h2>
                                <small class="text-muted">por 30 dias</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botões de Ação -->
            <div class="d-flex gap-3 justify-content-center">
                <a href="/Anuncios/Details/@Model.Id" class="btn btn-outline-secondary btn-lg px-5">
                    <i class="bi bi-x-circle me-2"></i>Cancelar
                </a>
                <form asp-action="ProcessarDestaque" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-warning btn-lg px-5">
                        <i class="bi bi-credit-card me-2"></i>Pagar com Stripe
                    </button>
                </form>
            </div>

            <!-- Informação de Segurança -->
            <div class="alert alert-info mt-4" role="alert">
                <i class="bi bi-shield-check me-2"></i>
                <strong>Pagamento Seguro:</strong> O pagamento é processado de forma segura através do Stripe.
                Os seus dados de pagamento nunca são armazenados nos nossos servidores.
            </div>
        </div>
    </div>
</div>
