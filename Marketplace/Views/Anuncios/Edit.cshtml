@{
    ViewData["Title"] = "Editar Anúncio";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <div class="create-form-container card shadow-lg">
                <div class="card-body p-4 p-md-5">
                    <h2 class="card-title text-center mb-4">Editar Anúncio</h2>
                    <p class="text-center text-muted mb-5">Altere os detalhes do seu anúncio ou faça a gestão das fotografias.</p>

                    <form>
                        <!-- Secção de Informação Principal -->
                        <h4 class="form-section-title">Informação Principal</h4>
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label for="titulo" class="form-label">Título do Anúncio</label>
                                <input type="text" class="form-control" id="titulo" value="BMW Série 3 320d Pack M">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="preco" class="form-label">Preço</label>
                                <div class="input-group">
                                    <span class="input-group-text">€</span>
                                    <input type="number" class="form-control" id="preco" value="28500">
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="descricao" class="form-label">Descrição</label>
                            <textarea class="form-control" id="descricao" rows="4">Carro nacional em excelente estado, com todas as revisões na marca. Pack M completo, interior e exterior.</textarea>
                        </div>

                        <!-- Secção de Detalhes do Veículo -->
                        <h4 class="form-section-title">Detalhes do Veículo</h4>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="marca" class="form-label">Marca</label>
                                <select id="marca" class="form-select">
                                    <option>Audi</option>
                                    <option selected>BMW</option>
                                    <option>Mercedes-Benz</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="modelo" class="form-label">Modelo</label>
                                <input type="text" class="form-control" id="modelo" value="Série 3">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="ano" class="form-label">Ano de Registo</label>
                                <input type="number" class="form-control" id="ano" value="2019">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="kms" class="form-label">Quilometragem (km)</label>
                                <input type="number" class="form-control" id="kms" value="98000">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="combustivel" class="form-label">Combustível</label>
                                <select id="combustivel" class="form-select">
                                    <option selected>Diesel</option>
                                    <option>Gasolina</option>
                                    <option>Elétrico</option>
                                    <option>Híbrido</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="transmissao" class="form-label">Transmissão</label>
                                <select id="transmissao" class="form-select">
                                    <option selected>Manual</option>
                                    <option>Automática</option>
                                </select>
                            </div>
                        </div>

                        <!-- Secção de Gestão de Imagens -->
                        <h4 class="form-section-title">Fotografias</h4>
                        <div class="row g-2 mb-3">
                            <!-- Imagem Existente 1 -->
                            <div class="col-3">
                                <div class="edit-image-thumb">
                                    <img src="https://placehold.co/200x200/343a40/e9ecef?text=Frente" alt="Thumbnail da imagem">
                                    <button type="button" class="btn btn-danger btn-sm btn-delete-img" title="Remover imagem"><i class="bi bi-x-lg"></i></button>
                                </div>
                            </div>
                            <!-- Imagem Existente 2 -->
                            <div class="col-3">
                                <div class="edit-image-thumb">
                                    <img src="https://placehold.co/200x200/343a40/e9ecef?text=Interior" alt="Thumbnail da imagem">
                                    <button type="button" class="btn btn-danger btn-sm btn-delete-img" title="Remover imagem"><i class="bi bi-x-lg"></i></button>
                                </div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="imagens" class="form-label">Adicionar mais imagens</label>
                            <input class="form-control" type="file" id="imagens" multiple>
                        </div>

                        <!-- Botões de Ação -->
                        <div class="d-grid mt-5 gap-3">
                            <button type="submit" class="btn btn-primary btn-lg">Guardar Alterações</button>
                            <button type="button" class="btn btn-outline-danger">Apagar Anúncio</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
