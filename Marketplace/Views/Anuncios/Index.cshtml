<!-- Views/Anuncios/Index.cshtml -->
@{
    ViewData["Title"] = "Comprar Carros";
}

<div class="container-fluid mt-5 pt-5">
    <div class="row">
        <!-- Coluna de Filtros -->
        <div class="col-lg-3">
            <div class="filter-sidebar p-4 shadow-sm rounded">
                <h4 class="mb-4 border-bottom pb-2">Filtros</h4>
                <form>
                    <!-- Filtro de Marca -->
                    <div class="mb-3">
                        <label for="marca" class="form-label">Marca</label>
                        <select id="marca" class="form-select">
                            <option selected>Todas</option>
                            <option>BMW</option>
                            <option>Mercedes-Benz</option>
                            <option>Audi</option>
                            <option>Toyota</option>
                        </select>
                    </div>

                    <!-- Filtro de Modelo -->
                    <div class="mb-3">
                        <label for="modelo" class="form-label">Modelo</label>
                        <select id="modelo" class="form-select">
                            <option selected>Todos</option>
                            <option>Série 1</option>
                            <option>Classe A</option>
                            <option>A3</option>
                        </select>
                    </div>

                    <!-- Filtro de Preço -->
                    <div class="mb-3">
                        <label for="preco" class="form-label">Preço (até)</label>
                        <input type="range" class="form-range" min="0" max="100000" step="1000" id="preco" oninput="this.nextElementSibling.value = this.value + ' €'">
                        <output class="form-text">50000 €</output>
                    </div>

                    <!-- Filtro de Ano -->
                    <div class="row mb-3">
                        <div class="col">
                            <label for="ano-min" class="form-label">Ano Mínimo</label>
                            <input type="number" id="ano-min" class="form-control" placeholder="Ex: 2015">
                        </div>
                        <div class="col">
                            <label for="ano-max" class="form-label">Ano Máximo</label>
                            <input type="number" id="ano-max" class="form-control" placeholder="Ex: 2023">
                        </div>
                    </div>

                    <!-- Filtro de Quilometragem -->
                    <div class="row mb-3">
                        <div class="col">
                            <label for="km-min" class="form-label">Km Mínimos</label>
                            <input type="number" id="km-min" class="form-control" placeholder="Ex: 10000">
                        </div>
                        <div class="col">
                            <label for="km-max" class="form-label">Km Máximos</label>
                            <input type="number" id="km-max" class="form-control" placeholder="Ex: 150000">
                        </div>
                    </div>

                    <!-- Filtro de Categoria (Tipo de Carroçaria) -->
                    <div class="mb-3">
                        <label for="categoria" class="form-label">Categoria</label>
                        <select id="categoria" class="form-select">
                            <option selected>Todas</option>
                            <option>SUV</option>
                            <option>Sedan</option>
                            <option>Hatchback</option>
                            <option>Carrinha</option>
                            <option>Desportivo</option>
                        </select>
                    </div>

                    <!-- Filtro de Combustível -->
                    <div class="mb-3">
                        <label for="combustivel" class="form-label">Combustível</label>
                        <select id="combustivel" class="form-select">
                            <option selected>Todos</option>
                            <option>Gasolina</option>
                            <option>Diesel</option>
                            <option>Elétrico</option>
                            <option>Híbrido</option>
                        </select>
                    </div>

                    <!-- Filtro de Tipo (Novo/Usado) -->
                    <div class="mb-3">
                        <label for="tipo" class="form-label">Condição</label>
                        <select id="tipo" class="form-select">
                            <option selected>Todas</option>
                            <option>Novo</option>
                            <option>Usado</option>
                        </select>
                    </div>

                    <!-- Filtro de Caixa de Velocidades -->
                    <div class="mb-3">
                        <label for="caixa" class="form-label">Caixa de Velocidades</label>
                        <select id="caixa" class="form-select">
                            <option selected>Todas</option>
                            <option>Manual</option>
                            <option>Automática</option>
                        </select>
                    </div>

                    <!-- Filtro de Cor -->
                    <div class="mb-3">
                        <label for="cor" class="form-label">Cor</label>
                        <input type="text" id="cor" class="form-control" placeholder="Ex: Preto">
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary">Aplicar Filtros</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Coluna de Anúncios -->
        <div class="col-lg-9">
            <!-- Barra de Ordenação e Contagem -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <span class="text-muted">A mostrar 1-3 de 3 resultados</span>
                <div class="d-flex align-items-center">
                    <label for="ordenar" class="form-label me-2 mb-0">Ordenar por:</label>
                    <select id="ordenar" class="form-select w-auto">
                        <option selected>Relevância</option>
                        <option>Preço (Mais baixo)</option>
                        <option>Preço (Mais alto)</option>
                        <option>Mais Recentes</option>
                    </select>
                </div>
            </div>

            <!-- Lista de Anúncios -->
            <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
                <!-- Exemplo de Anúncio 1 -->
                <div class="col">
                    <div class="card anuncio-card h-100">
                        <a asp-controller="Anuncios" asp-action="Details">
                            <img src="~/imagens/bmwSerie1.jpg" class="card-img-top" alt="[Imagem de um BMW Série 1]">
                        </a>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">BMW Série 1 116d</h5>
                            <h6 class="card-subtitle mb-2 text-primary fw-bold">18.500 €</h6>
                            <p class="card-text text-muted small flex-grow-1">Um carro desportivo e eficiente, perfeito para a cidade e viagens.</p>
                            <div class="anuncio-details">
                                <span class="badge bg-light text-dark">2018</span>
                                <span class="badge bg-light text-dark">110.000 km</span>
                                <span class="badge bg-light text-dark">Diesel</span>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0 pb-3">
                            <a asp-controller="Anuncios" asp-action="Details" class="btn btn-outline-primary w-100">Ver Detalhes</a>
                            <button class="btn-favorito"><i class="bi bi-heart"></i></button>
                        </div>
                    </div>
                </div>

                <!-- Exemplo de Anúncio 2 -->
                <div class="col">
                    <div class="card anuncio-card h-100">
                        <a asp-controller="Anuncios" asp-action="Details">
                            <img src="~/imagens/audiA3.jpg" class="card-img-top" alt="[Imagem de um Audi A3]">
                        </a>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Audi A3 Sportback</h5>
                            <h6 class="card-subtitle mb-2 text-primary fw-bold">22.000 €</h6>
                            <p class="card-text text-muted small flex-grow-1">Conforto, tecnologia e um design elegante. O parceiro ideal para o dia a dia.</p>
                            <div class="anuncio-details">
                                <span class="badge bg-light text-dark">2019</span>
                                <span class="badge bg-light text-dark">85.000 km</span>
                                <span class="badge bg-light text-dark">Gasolina</span>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0 pb-3">
                            <a asp-controller="Anuncios" asp-action="Details" class="btn btn-outline-primary w-100">Ver Detalhes</a>
                            <button class="btn-favorito active"><i class="bi bi-heart-fill"></i></button>
                        </div>
                    </div>
                </div>

                <!-- Exemplo de Anúncio 3 -->
                <div class="col">
                    <div class="card anuncio-card h-100">
                        <a asp-controller="Anuncios" asp-action="Details">
                            <img src="~/imagens/mercedezClassA.jpg" class="card-img-top" alt="[Imagem de um Mercedes Classe A]">
                        </a>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Mercedes-Benz Classe A</h5>
                            <h6 class="card-subtitle mb-2 text-primary fw-bold">25.750 €</h6>
                            <p class="card-text text-muted small flex-grow-1">Luxo e performance num formato compacto. Inclui pack AMG.</p>
                            <div class="anuncio-details">
                                <span class="badge bg-light text-dark">2020</span>
                                <span class="badge bg-light text-dark">60.000 km</span>
                                <span class="badge bg-light text-dark">Híbrido</span>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0 pb-3">
                            <a asp-controller="Anuncios" asp-action="Details" class="btn btn-outline-primary w-100">Ver Detalhes</a>
                            <button class="btn-favorito"><i class="bi bi-heart"></i></button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Paginação -->
            <nav aria-label="Navegação de página" class="mt-5 d-flex justify-content-center">
                <ul class="pagination">
                    <li class="page-item disabled"><a class="page-link" href="#">Anterior</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Próximo</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

