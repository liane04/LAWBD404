@model Marketplace.Models.DisponibilidadeVendedor

@{
    ViewData["Title"] = "Editar Disponibilidade";
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="bg-light border-bottom">
    <div class="container">
        <ol class="breadcrumb py-3 mb-0">
            <li class="breadcrumb-item"><a href="/"><i class="bi bi-house-door-fill me-1"></i>Início</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Disponibilidade</a></li>
            <li class="breadcrumb-item active" aria-current="page">Editar</li>
        </ol>
    </div>
</nav>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <!-- Cabeçalho -->
            <div class="text-center mb-4">
                <div class="mb-3">
                    <i class="bi bi-pencil-square text-primary" style="font-size: 3rem;"></i>
                </div>
                <h1 class="h2 fw-bold text-primary mb-2">Editar Disponibilidade</h1>
                <p class="text-muted">Atualize seu horário de disponibilidade</p>
            </div>

            <!-- Formulário -->
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="VendedorId" />
                        <input type="hidden" asp-for="DataCriacao" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Dia da Semana -->
                        <div class="mb-4">
                            <label asp-for="DiaSemana" class="form-label fw-semibold">
                                <i class="bi bi-calendar-day me-1"></i>Dia da Semana
                                <span class="text-danger">*</span>
                            </label>
                            <select asp-for="DiaSemana" class="form-select form-select-lg" required>
                                <option value="">Selecione...</option>
                                <option value="0">Domingo</option>
                                <option value="1">Segunda-feira</option>
                                <option value="2">Terça-feira</option>
                                <option value="3">Quarta-feira</option>
                                <option value="4">Quinta-feira</option>
                                <option value="5">Sexta-feira</option>
                                <option value="6">Sábado</option>
                            </select>
                            <span asp-validation-for="DiaSemana" class="text-danger small"></span>
                        </div>

                        <!-- Hora de Início -->
                        <div class="mb-4">
                            <label asp-for="HoraInicio" class="form-label fw-semibold">
                                <i class="bi bi-clock me-1"></i>Hora de Início
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="HoraInicio" type="time" class="form-control form-control-lg" required />
                            <span asp-validation-for="HoraInicio" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Horário em que você começa a atender visitas
                            </div>
                        </div>

                        <!-- Hora de Fim -->
                        <div class="mb-4">
                            <label asp-for="HoraFim" class="form-label fw-semibold">
                                <i class="bi bi-clock-fill me-1"></i>Hora de Fim
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="HoraFim" type="time" class="form-control form-control-lg" required />
                            <span asp-validation-for="HoraFim" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Horário em que você para de atender visitas
                            </div>
                        </div>

                        <!-- Intervalo entre Visitas -->
                        <div class="mb-4">
                            <label asp-for="IntervaloMinutos" class="form-label fw-semibold">
                                <i class="bi bi-hourglass-split me-1"></i>Intervalo entre Visitas (minutos)
                                <span class="text-danger">*</span>
                            </label>
                            <select asp-for="IntervaloMinutos" class="form-select form-select-lg" required>
                                <option value="">Selecione...</option>
                                <option value="15">15 minutos</option>
                                <option value="30">30 minutos</option>
                                <option value="60">60 minutos (recomendado)</option>
                                <option value="90">90 minutos</option>
                                <option value="120">120 minutos</option>
                            </select>
                            <span asp-validation-for="IntervaloMinutos" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Tempo reservado para cada visita. Recomendamos pelo menos 60 minutos.
                            </div>
                        </div>

                        <!-- Ativo -->
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="Ativo" class="form-check-input" type="checkbox" />
                                <label asp-for="Ativo" class="form-check-label fw-semibold">
                                    <i class="bi bi-toggle-on me-1"></i>Disponibilidade Ativa
                                </label>
                            </div>
                            <div class="form-text ms-4">
                                <i class="bi bi-info-circle me-1"></i>
                                Desmarque para desativar temporariamente esta disponibilidade
                            </div>
                        </div>

                        <!-- Botões -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-check-circle me-2"></i>Atualizar Disponibilidade
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
