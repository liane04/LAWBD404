@{
    ViewData["Title"] = "Minhas Mensagens";
    Layout = null;
    var currentUserId = ViewBag.CurrentUserId;
}
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mensagens - 404 Car Marketplace</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts (Inter) -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #2563eb;
            --primary-dark: #1e40af;
            --secondary-color: #1e293b;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
            --info-color: #3b82f6;
            --light-bg: #f8fafc;
            --border-color: #e2e8f0;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            overflow: hidden;
            background-color: var(--light-bg);
        }

        .chat-page-container {
            height: 100vh;
            display: flex;
        }

        /* ===== SIDEBAR ===== */
        .chat-sidebar {
            width: 380px;
            height: 100vh;
            display: flex;
            flex-direction: column;
            background: white;
            border-right: 1px solid var(--border-color);
            flex-shrink: 0;
        }

        .chat-sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--border-color);
            background: white;
        }

        .chat-sidebar-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--secondary-color);
            margin-bottom: 1rem;
        }

        .filter-tabs {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .filter-tab {
            flex: 1;
            padding: 0.5rem;
            border: 1px solid var(--border-color);
            background: white;
            border-radius: 0.5rem;
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
            text-align: center;
        }

        .filter-tab:hover {
            background: var(--light-bg);
        }

        .filter-tab.active {
            background: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
        }

        .search-box {
            position: relative;
        }

        .search-box input {
            width: 100%;
            padding: 0.75rem 1rem 0.75rem 2.5rem;
            border: 1px solid var(--border-color);
            border-radius: 0.5rem;
            font-size: 0.875rem;
        }

        .search-box i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
        }

        .chat-list-container {
            overflow-y: auto;
            flex-grow: 1;
        }

        .chat-item {
            padding: 1rem 1.5rem;
            border-bottom: 1px solid var(--border-color);
            cursor: pointer;
            transition: all 0.2s;
            background: white;
            display: block;
            text-decoration: none;
            color: inherit;
        }

        .chat-item:hover {
            background: var(--light-bg);
        }

        .chat-item.active {
            background: #eff6ff;
            border-left: 3px solid var(--primary-color);
        }

        .chat-item-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
            position: relative;
        }

        .online-indicator {
            width: 12px;
            height: 12px;
            background: var(--success-color);
            border: 2px solid white;
            border-radius: 50%;
            position: absolute;
            bottom: 0;
            right: 0;
        }

        .chat-item-name {
            font-weight: 600;
            color: var(--secondary-color);
            font-size: 0.9375rem;
            margin-bottom: 0.25rem;
        }

        .chat-item-preview {
            font-size: 0.875rem;
            color: #64748b;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 200px;
        }

        .chat-item.active .chat-item-preview {
            color: var(--primary-color);
            font-weight: 500;
        }

        .chat-item-time {
            font-size: 0.75rem;
            color: #94a3b8;
            white-space: nowrap;
        }

        .chat-item.active .chat-item-time {
            color: var(--primary-color);
            font-weight: 600;
        }

        .unread-badge {
            background: var(--primary-color);
            color: white;
            padding: 0.125rem 0.5rem;
            border-radius: 1rem;
            font-size: 0.75rem;
            font-weight: 600;
            min-width: 20px;
            text-align: center;
        }

        .type-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            padding: 0.125rem 0.5rem;
            border-radius: 0.375rem;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .type-badge.comprar {
            background: #dbeafe;
            color: #1e40af;
        }

        .type-badge.vender {
            background: #d1fae5;
            color: #065f46;
        }

        /* ===== CONVERSA ===== */
        .chat-conversation-area {
            flex-grow: 1;
            height: 100vh;
            display: flex;
            flex-direction: column;
            background: white;
        }

        .chat-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--border-color);
            background: white;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .chat-header-avatar {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            object-fit: cover;
        }

        .chat-header-info {
            flex-grow: 1;
        }

        .chat-header-name {
            font-weight: 700;
            color: var(--secondary-color);
            font-size: 1.125rem;
            margin-bottom: 0.25rem;
        }

        .chat-header-status {
            font-size: 0.875rem;
            color: #64748b;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .status-online {
            width: 8px;
            height: 8px;
            background: var(--success-color);
            border-radius: 50%;
        }

        .chat-header-actions {
            display: flex;
            gap: 0.5rem;
        }

        .btn-icon {
            width: 40px;
            height: 40px;
            border: 1px solid var(--border-color);
            background: white;
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s;
            color: #64748b;
        }

        .btn-icon:hover {
            background: var(--light-bg);
            color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .chat-body {
            flex-grow: 1;
            overflow-y: auto;
            padding: 1.5rem;
            background: #f8fafc;
        }

        .date-divider {
            text-align: center;
            margin: 1.5rem 0;
            position: relative;
        }

        .date-divider span {
            background: #e2e8f0;
            padding: 0.375rem 1rem;
            border-radius: 1rem;
            font-size: 0.75rem;
            font-weight: 500;
            color: #64748b;
        }

        .message-wrapper {
            display: flex;
            margin-bottom: 1rem;
        }

        .message-wrapper.sent {
            justify-content: flex-end;
        }

        .message-wrapper.received {
            justify-content: flex-start;
        }

        .message {
            max-width: 70%;
            padding: 0.875rem 1.125rem;
            border-radius: 1.125rem;
            position: relative;
            animation: fadeIn 0.3s;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .message.sent {
            background: var(--primary-color);
            color: white;
            border-bottom-right-radius: 0.25rem;
        }

        .message.received {
            background: white;
            color: var(--secondary-color);
            border: 1px solid var(--border-color);
            border-bottom-left-radius: 0.25rem;
        }

        .message-text {
            word-wrap: break-word;
            margin-bottom: 0.25rem;
            line-height: 1.5;
        }

        .message-time {
            font-size: 0.6875rem;
            opacity: 0.7;
            text-align: right;
        }

        .message.sent .message-time {
            color: rgba(255, 255, 255, 0.9);
        }

        .message.received .message-time {
            color: #94a3b8;
        }

        /* ===== CAIXA DE ENVIO ===== */
        .chat-footer {
            padding: 1.25rem 1.5rem;
            background: white;
            border-top: 1px solid var(--border-color);
        }

        .message-input-container {
            display: flex;
            gap: 0.75rem;
            align-items: flex-end;
        }

        .message-input-wrapper {
            flex-grow: 1;
            position: relative;
        }

        .message-input {
            width: 100%;
            padding: 0.875rem 3rem 0.875rem 1rem;
            border: 1px solid var(--border-color);
            border-radius: 1.5rem;
            font-size: 0.9375rem;
            resize: none;
            max-height: 120px;
            overflow-y: auto;
        }

        .message-input:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        }

        .emoji-btn {
            position: absolute;
            right: 1rem;
            bottom: 1rem;
            background: none;
            border: none;
            cursor: pointer;
            font-size: 1.25rem;
            color: #94a3b8;
            transition: transform 0.2s;
        }

        .emoji-btn:hover {
            transform: scale(1.2);
        }

        .send-btn {
            width: 48px;
            height: 48px;
            background: var(--primary-color);
            border: none;
            border-radius: 50%;
            color: white;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .send-btn:hover {
            background: var(--primary-dark);
            transform: scale(1.05);
        }

        .send-btn:active {
            transform: scale(0.95);
        }

        .send-btn:disabled {
            background: #cbd5e1;
            cursor: not-allowed;
        }

        /* ===== SCROLLBAR ===== */
        .chat-list-container::-webkit-scrollbar,
        .chat-body::-webkit-scrollbar {
            width: 6px;
        }

        .chat-list-container::-webkit-scrollbar-track,
        .chat-body::-webkit-scrollbar-track {
            background: transparent;
        }

        .chat-list-container::-webkit-scrollbar-thumb,
        .chat-body::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 3px;
        }

        .chat-list-container::-webkit-scrollbar-thumb:hover,
        .chat-body::-webkit-scrollbar-thumb:hover {
            background: #94a3b8;
        }

        /* ===== EMPTY STATE ===== */
        .empty-state {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            color: #94a3b8;
            padding: 2rem;
            text-align: center;
        }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            color: #cbd5e1;
        }

        .empty-state h3 {
            font-size: 1.25rem;
            font-weight: 600;
            color: #64748b;
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            font-size: 0.875rem;
        }

        /* ===== BOTÃO VOLTAR (MOBILE) ===== */
        .btn-back-mobile {
            display: none;
            background: none;
            border: none;
            color: var(--secondary-color);
            font-size: 1.25rem;
            padding: 0.5rem;
            margin-right: 0.5rem;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-back-mobile:hover {
            color: var(--primary-color);
        }

        /* ===== RESPONSIVO ===== */
        @@media (max-width: 768px) {
            .chat-sidebar {
                width: 100%;
                position: absolute;
                z-index: 10;
                transition: transform 0.3s ease;
            }

            .chat-sidebar.mobile-hidden {
                transform: translateX(-100%);
            }

            .chat-conversation-area {
                width: 100%;
            }

            .btn-back-mobile {
                display: inline-block;
            }

            .chat-header {
                padding: 1rem;
            }

            .chat-header-avatar {
                width: 40px;
                height: 40px;
            }

            .chat-header-name {
                font-size: 1rem;
            }

            .chat-header-status {
                font-size: 0.75rem;
            }
        }
    </style>
</head>
<body>

    <div class="chat-page-container">

        <!-- ===== SIDEBAR - LISTA DE CONVERSAS ===== -->
        <div class="chat-sidebar">
            <!-- Header -->
            <div class="chat-sidebar-header">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h1 class="chat-sidebar-title mb-0">
                        <i class="bi bi-chat-dots-fill me-2"></i>Mensagens
                    </h1>
                    <a href="/" class="btn-icon" title="Voltar ao site">
                        <i class="bi bi-x-lg"></i>
                    </a>
                </div>

                <!-- Filtros -->
                <div class="filter-tabs">
                    <button class="filter-tab active" data-filter="todos" onclick="filtrarConversas('todos')">
                        Todas
                    </button>
                    <button class="filter-tab" data-filter="comprar" onclick="filtrarConversas('comprar')">
                        <i class="bi bi-cart-check"></i> A comprar
                    </button>
                    <button class="filter-tab" data-filter="vender" onclick="filtrarConversas('vender')">
                        <i class="bi bi-shop"></i> A vender
                    </button>
                </div>

                <!-- Pesquisa -->
                <div class="search-box">
                    <i class="bi bi-search"></i>
                    <input type="search" id="chatSearch" placeholder="Pesquisar conversas..." />
                </div>
            </div>

            <!-- Lista de Conversas -->
            <div class="chat-list-container" id="chatList">
                <!-- Carregado via JS -->
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">A carregar...</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- ===== ÁREA DE CONVERSA ===== -->
        <div class="chat-conversation-area" id="conversationArea">
            <!-- Estado Vazio Inicial -->
            <div class="empty-state" id="emptyState">
                <i class="bi bi-chat-square-text"></i>
                <h3>Selecione uma conversa</h3>
                <p>Escolha uma conversa da lista para ver as mensagens.</p>
            </div>

            <!-- Conteúdo da Conversa (Oculto inicialmente) -->
            <div id="chatContent" style="display: none; height: 100%; flex-direction: column;">
                <!-- Header da Conversa -->
                <div class="chat-header" id="chatHeader">
                    <button class="btn-back-mobile" onclick="voltarParaLista()" title="Voltar">
                        <i class="bi bi-arrow-left"></i>
                    </button>
                    <img src="" alt="Avatar" class="chat-header-avatar" id="chatAvatar" />
                    <div class="chat-header-info">
                        <div class="chat-header-name" id="chatName">Nome</div>
                        <div class="chat-header-status">
                            <i class="bi bi-car-front me-1"></i>
                            <span id="chatCar">Veículo</span>
                        </div>
                    </div>
                    <div class="chat-header-actions">
                        <a href="#" class="btn-icon" title="Ver Anúncio" id="btnVerAnuncio">
                            <i class="bi bi-car-front"></i>
                        </a>
                    </div>
                </div>

                <!-- Corpo das Mensagens -->
                <div class="chat-body" id="chatBody">
                    <!-- Mensagens carregadas via JS -->
                </div>

                <!-- Caixa de Envio -->
                <div class="chat-footer">
                    <div class="message-input-container">
                        <div class="message-input-wrapper">
                            <textarea id="chatInputBox" class="message-input" placeholder="Escreva a sua mensagem..." rows="1"></textarea>
                        </div>
                        <button id="chatSendBtn" class="send-btn" title="Enviar" onclick="enviarMensagem()">
                            <i class="bi bi-send-fill"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        let currentConversaId = null;
        let currentFilter = 'todos';
        const currentUserId = @currentUserId;

        document.addEventListener('DOMContentLoaded', function () {
            carregarConversas();

            // Verificar se há uma conversa para abrir automaticamente (query string)
            const urlParams = new URLSearchParams(window.location.search);
            const conversaId = urlParams.get('conversaId');
            if (conversaId) {
                abrirConversa(conversaId);
            }

            // Enter para enviar
            document.getElementById('chatInputBox').addEventListener('keypress', function (e) {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    enviarMensagem();
                }
            });

            // Polling para lista de conversas (a cada 10 segundos)
            setInterval(() => {
                carregarConversas(true); // true = silencioso (sem limpar lista)
            }, 10000);

            // Polling para mensagens da conversa atual (a cada 3 segundos)
            setInterval(() => {
                if (currentConversaId) {
                    atualizarMensagens(currentConversaId);
                }
            }, 3000);
        });

        function filtrarConversas(filtro) {
            currentFilter = filtro;
            
            // Atualizar UI das tabs
            document.querySelectorAll('.filter-tab').forEach(t => t.classList.remove('active'));
            document.querySelector(`[data-filter="${filtro}"]`).classList.add('active');

            carregarConversas();
        }

        function carregarConversas(silent = false) {
            fetch(`/Mensagens/GetConversas?filtro=${currentFilter}`)
                .then(response => response.json())
                .then(data => {
                    const listContainer = document.getElementById('chatList');
                    
                    if (!silent) {
                        listContainer.innerHTML = '';
                    }

                    if (data.length === 0) {
                        if (!silent) {
                            listContainer.innerHTML = `
                                <div class="text-center py-5 text-muted">
                                    <p>Nenhuma conversa encontrada.</p>
                                </div>
                            `;
                        }
                        return;
                    }

                    // Se for silencioso, idealmente faríamos diff, mas para simplificar vamos reconstruir
                    // se o user não estiver a interagir com a lista. 
                    // Como é uma lista simples, reconstruir não é terrível, mas perde scroll.
                    // Vamos reconstruir apenas se não for silencioso OU se o conteúdo mudou (simplificado: sempre reconstrói por agora, mas tenta manter scroll)
                    
                    const currentScroll = listContainer.scrollTop;
                    
                    let html = '';
                    data.forEach(conversa => {
                        const activeClass = currentConversaId == conversa.id ? 'active' : '';
                        const unreadBadge = conversa.naoLidas > 0 
                            ? `<span class="unread-badge mt-1">${conversa.naoLidas}</span>` 
                            : '';
                        
                        const typeBadge = conversa.tipo === 'vender'
                            ? `<span class="type-badge vender"><i class="bi bi-shop"></i> A vender</span>`
                            : `<span class="type-badge comprar"><i class="bi bi-cart-check"></i> A comprar</span>`;

                        html += `
                            <a href="#" class="chat-item ${activeClass}" onclick="abrirConversa(${conversa.id})">
                                <div class="d-flex align-items-start gap-3">
                                    <div style="position: relative;">
                                        <img src="${conversa.outroParticipanteImagem}" alt="${conversa.outroParticipanteNome}" class="chat-item-avatar" />
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between align-items-start mb-1">
                                            <div>
                                                <div class="chat-item-name">${conversa.outroParticipanteNome}</div>
                                                ${typeBadge}
                                            </div>
                                            <div class="text-end">
                                                <div class="chat-item-time">${formatDate(conversa.ultimaMensagemData)}</div>
                                                ${unreadBadge}
                                            </div>
                                        </div>
                                        <div class="chat-item-preview">${conversa.ultimaMensagem || '<i>Sem mensagens</i>'}</div>
                                        <div class="small text-muted mt-1">
                                            <i class="bi bi-car-front me-1"></i>${conversa.tituloAnuncio}
                                        </div>
                                    </div>
                                </div>
                            </a>
                        `;
                    });
                    
                    listContainer.innerHTML = html;
                    if (silent) {
                        listContainer.scrollTop = currentScroll;
                    }
                })
                .catch(err => console.error('Erro ao carregar conversas:', err));
        }

        function atualizarMensagens(conversaId) {
            fetch(`/Mensagens/GetMensagens?conversaId=${conversaId}`)
                .then(response => response.json())
                .then(data => {
                    if (currentConversaId !== conversaId) return; // Mudou de conversa entretanto

                    const body = document.getElementById('chatBody');
                    // Estratégia simples: contar mensagens e adicionar se houver novas
                    // Ou limpar e reconstruir (perde scroll se user estiver a ler histórico)
                    
                    // Vamos comparar o número de mensagens
                    const currentCount = body.querySelectorAll('.message-wrapper').length;
                    // Nota: GetMensagens marca como lida, o que é bom.
                    
                    if (data.mensagens.length > currentCount) {
                        // Há novas mensagens!
                        // Adicionar apenas as novas
                        const novas = data.mensagens.slice(currentCount);
                        
                        novas.forEach(msg => {
                            const type = msg.enviadaPorMim ? 'sent' : 'received';
                            const time = new Date(msg.dataEnvio).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

                            // Remover mensagem otimista se existir (verificação simples)
                            // (Na implementação anterior usámos IDs temporários, aqui simplificamos)
                            
                            body.innerHTML += `
                                <div class="message-wrapper ${type}">
                                    <div class="message ${type}">
                                        <div class="message-text">${msg.conteudo}</div>
                                        <div class="message-time">${time}</div>
                                    </div>
                                </div>
                            `;
                        });
                        
                        // Scroll para o fundo apenas se estava no fundo ou se é mensagem minha
                        body.scrollTop = body.scrollHeight;
                        
                        // Atualizar lista lateral também para limpar badge
                        carregarConversas(true);
                    }
                })
                .catch(err => console.error('Erro ao atualizar mensagens:', err));
        }

        function abrirConversa(id) {
            currentConversaId = id;

            // Atualizar seleção visual na lista
            document.querySelectorAll('.chat-item').forEach(item => item.classList.remove('active'));
            // (Idealmente re-renderizariamos a lista para marcar o ativo, mas por agora ok)

            // Mostrar loading ou limpar área
            document.getElementById('emptyState').style.display = 'none';
            document.getElementById('chatContent').style.display = 'flex';

            // MOBILE: Esconder sidebar e mostrar chat
            if (window.innerWidth <= 768) {
                document.querySelector('.chat-sidebar').classList.add('mobile-hidden');
                document.querySelector('.chat-conversation-area').classList.remove('mobile-hidden');
            }
            
            fetch(`/Mensagens/GetMensagens?conversaId=${id}`)
                .then(response => response.json())
                .then(data => {
                    // Preencher Header
                    document.getElementById('chatName').textContent = data.outroParticipanteNome;
                    document.getElementById('chatCar').textContent = data.anuncioTitulo;
                    document.getElementById('chatAvatar').src = data.outroParticipanteImagem;
                    document.getElementById('btnVerAnuncio').href = `/Anuncios/Details/${data.anuncioId || '#'}`; // Nota: API precisa retornar anuncioId

                    // Preencher Mensagens
                    const body = document.getElementById('chatBody');
                    body.innerHTML = '';

                    let lastDate = null;

                    data.mensagens.forEach(msg => {
                        const msgDate = new Date(msg.dataEnvio).toLocaleDateString();
                        if (msgDate !== lastDate) {
                            body.innerHTML += `
                                <div class="date-divider">
                                    <span>${msgDate}</span>
                                </div>
                            `;
                            lastDate = msgDate;
                        }

                        const type = msg.enviadaPorMim ? 'sent' : 'received';
                        const time = new Date(msg.dataEnvio).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

                        body.innerHTML += `
                            <div class="message-wrapper ${type}">
                                <div class="message ${type}">
                                    <div class="message-text">${msg.conteudo}</div>
                                    <div class="message-time">${time}</div>
                                </div>
                            </div>
                        `;
                    });

                    // Scroll para o fundo
                    body.scrollTop = body.scrollHeight;

                    // Recarregar lista para limpar não lidas
                    carregarConversas();
                })
                .catch(err => console.error('Erro ao carregar mensagens:', err));
        }

        function voltarParaLista() {
            // MOBILE: Mostrar sidebar e esconder chat
            if (window.innerWidth <= 768) {
                document.querySelector('.chat-sidebar').classList.remove('mobile-hidden');
                document.querySelector('.chat-conversation-area').classList.add('mobile-hidden');

                // Resetar para o estado vazio
                document.getElementById('emptyState').style.display = 'flex';
                document.getElementById('chatContent').style.display = 'none';
                currentConversaId = null;
            }
        }

        function enviarMensagem() {
            if (!currentConversaId) return;

            const input = document.getElementById('chatInputBox');
            const btn = document.getElementById('chatSendBtn');
            const conteudo = input.value.trim();
            
            if (!conteudo) return;

            // 1. Disable UI immediately to prevent double-submit
            input.disabled = true;
            btn.disabled = true;

            // 2. Optimistic UI: Append message immediately
            const body = document.getElementById('chatBody');
            const now = new Date();
            const time = now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            
            // Check if we need a date divider (simplified check against last message in DOM)
            // For simplicity in optimistic UI, we skip date divider check or assume same day
            
            const tempId = 'temp-' + Date.now();
            
            const optimisticHtml = `
                <div class="message-wrapper sent" id="${tempId}">
                    <div class="message sent" style="opacity: 0.7">
                        <div class="message-text">${conteudo}</div>
                        <div class="message-time">${time} <i class="bi bi-clock"></i></div>
                    </div>
                </div>
            `;
            body.insertAdjacentHTML('beforeend', optimisticHtml);
            body.scrollTop = body.scrollHeight;

            // Clear input immediately
            input.value = '';

            const formData = new FormData();
            formData.append('conversaId', currentConversaId);
            formData.append('conteudo', conteudo);

            fetch('/Mensagens/EnviarMensagem', {
                method: 'POST',
                body: formData
            })
            .then(async response => {
                if (!response.ok) {
                    const text = await response.text();
                    throw new Error(`Server error: ${response.status} ${text}`);
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    // Replace optimistic message with real one or just update status
                    const tempMsg = document.getElementById(tempId);
                    if (tempMsg) {
                        tempMsg.querySelector('.message').style.opacity = '1';
                        tempMsg.querySelector('.message-time').innerHTML = `${time}`;
                    }
                    
                    // Update sidebar without full reload if possible, or just silent reload
                    carregarConversas();
                } else {
                    // Error handling
                    console.error('Server returned success: false', data);
                    alert('Erro ao enviar mensagem: ' + (data.message || 'Erro desconhecido'));
                    document.getElementById(tempId).remove();
                    input.value = conteudo; // Restore text
                }
            })
            .catch(err => {
                console.error('Erro detalhado:', err);
                alert('Erro de conexão ou servidor: ' + err.message);
                const tempMsg = document.getElementById(tempId);
                if (tempMsg) tempMsg.remove();
                input.value = conteudo;
            })
            .finally(() => {
                // Re-enable UI
                input.disabled = false;
                btn.disabled = false;
                input.focus();
            });
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            const now = new Date();
            const diff = now - date;
            
            // Se for hoje, mostrar hora
            if (date.toDateString() === now.toDateString()) {
                return date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            }
            
            // Se for ontem
            const yesterday = new Date(now);
            yesterday.setDate(yesterday.getDate() - 1);
            if (date.toDateString() === yesterday.toDateString()) {
                return 'Ontem';
            }

            // Caso contrário, data curta
            return date.toLocaleDateString();
        }
    </script>
