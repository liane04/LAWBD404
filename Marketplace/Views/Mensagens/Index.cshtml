        :root {
            --primary-color: #2563eb;
            --primary-dark: #1e40af;
            --secondary-color: #1e293b;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
            --info-color: #3b82f6;
            --light-bg: #f8fafc;
            --border-color: #e2e8f0;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            overflow: hidden;
            background-color: var(--light-bg);
        }

        .chat-page-container {
            height: 100vh;
            display: flex;
        }

        /* ===== SIDEBAR ===== */
        .chat-sidebar {
            width: 380px;
            height: 100vh;
            display: flex;
            flex-direction: column;
            background: white;
            border-right: 1px solid var(--border-color);
            flex-shrink: 0;
        }

        .chat-sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--border-color);
            background: white;
        }

        .chat-sidebar-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--secondary-color);
            margin-bottom: 1rem;
        }

        .filter-tabs {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .filter-tab {
            flex: 1;
            padding: 0.5rem;
            border: 1px solid var(--border-color);
            background: white;
            border-radius: 0.5rem;
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
            text-align: center;
        }

        .filter-tab:hover {
            background: var(--light-bg);
        }

        .filter-tab.active {
            background: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
        }

        .search-box {
            position: relative;
        }

        .search-box input {
            width: 100%;
            padding: 0.75rem 1rem 0.75rem 2.5rem;
            border: 1px solid var(--border-color);
            border-radius: 0.5rem;
            font-size: 0.875rem;
        }

        .search-box i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
        }

        .chat-list-container {
            overflow-y: auto;
            flex-grow: 1;
        }

        .chat-item {
            padding: 1rem 1.5rem;
            border-bottom: 1px solid var(--border-color);
            cursor: pointer;
            transition: all 0.2s;
            background: white;
            display: block;
            text-decoration: none;
            color: inherit;
        }

        .chat-item:hover {
            background: var(--light-bg);
        }

        .chat-item.active {
            background: #eff6ff;
            border-left: 3px solid var(--primary-color);
        }

        .chat-item-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
            position: relative;
        }

        .online-indicator {
            width: 12px;
            height: 12px;
            background: var(--success-color);
            border: 2px solid white;
            border-radius: 50%;
            position: absolute;
            bottom: 0;
            right: 0;
        }

        .chat-item-name {
            font-weight: 600;
            color: var(--secondary-color);
            font-size: 0.9375rem;
            margin-bottom: 0.25rem;
        }

        .chat-item-preview {
            font-size: 0.875rem;
            color: #64748b;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 200px;
        }

        .chat-item.active .chat-item-preview {
            color: var(--primary-color);
            font-weight: 500;
        }

        .chat-item-time {
            font-size: 0.75rem;
            color: #94a3b8;
            white-space: nowrap;
        }

        .chat-item.active .chat-item-time {
            color: var(--primary-color);
            font-weight: 600;
        }

        .unread-badge {
            background: var(--primary-color);
            color: white;
            padding: 0.125rem 0.5rem;
            border-radius: 1rem;
            font-size: 0.75rem;
            font-weight: 600;
            min-width: 20px;
            text-align: center;
        }

        .type-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            padding: 0.125rem 0.5rem;
            border-radius: 0.375rem;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .type-badge.comprar {
            background: #dbeafe;
            color: #1e40af;
        }

        .type-badge.vender {
            background: #d1fae5;
            color: #065f46;
        }

        /* ===== CONVERSA ===== */
        .chat-conversation-area {
            flex-grow: 1;
            height: 100vh;
            display: flex;
            flex-direction: column;
            background: white;
        }

        .chat-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--border-color);
            background: white;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .chat-header-avatar {
