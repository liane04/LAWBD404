            const chatSendBtn = document.getElementById('chatSendBtn');
            const chatSearch = document.getElementById('chatSearch');
            const filterTabs = document.querySelectorAll('.filter-tab');

            // Auto-resize textarea
            chatInputBox.addEventListener('input', function() {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
            });

            // Scroll to bottom
            function scrollToBottom() {
                chatBody.scrollTop = chatBody.scrollHeight;
            }

            scrollToBottom();

            // Trocar de conversa
            chatItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();

                    // Remove active de todos
                    chatItems.forEach(i => i.classList.remove('active'));

                    // Adiciona active ao clicado
                    this.classList.add('active');

                    // Remove badge de n√£o lidas
                    const badge = this.querySelector('.unread-badge');
                    if (badge) badge.remove();

                    // Atualiza header
                    const name = this.dataset.name;
                    const avatar = this.dataset.avatar;
                    const car = this.dataset.car;
                    const online = this.dataset.online === 'true';

                    chatAvatar.src = avatar;
                    chatName.textContent = name;
                    chatCar.textContent = car;

                    if (online) {
                        chatStatusIndicator.style.display = 'block';
                        chatStatus.textContent = 'Online';
                    } else {
                        chatStatusIndicator.style.display = 'none';
                        chatStatus.textContent = 'Offline';
                    }

                    // Simula carregamento de mensagens
                    chatBody.innerHTML = `
                        <div class="empty-state">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">A carregar...</span>
                            </div>
                            <p class="mt-3">A carregar mensagens com ${name}...</p>
                        </div>
                    `;

                    setTimeout(() => {
                        chatBody.innerHTML = `
                            <div class="date-divider">
                                <span>Hoje</span>
                            </div>
                            <div class="message-wrapper received">
                                <div class="message">
                                    <div class="message-text">Ol√°! Esta √© uma conversa com ${name}.</div>
                                    <div class="message-time">16:00</div>
                                </div>
                            </div>
                            <div class="message-wrapper sent">
                                <div class="message">
                                    <div class="message-text">Ol√°! Obrigado por responder.</div>
                                    <div class="message-time">16:01</div>
                                </div>
                            </div>
                        `;
                        scrollToBottom();
                    }, 500);
                });
            });

            // Enviar mensagem
            function sendMessage() {
                const text = chatInputBox.value.trim();
                if (!text) return;

                const time = new Date().toLocaleTimeString('pt-PT', { hour: '2-digit', minute: '2-digit' });

                const messageHTML = `
                    <div class="message-wrapper sent">
                        <div class="message">
                            <div class="message-text">${text}</div>
                            <div class="message-time">${time}</div>
                        </div>
                    </div>
                `;

                chatBody.insertAdjacentHTML('beforeend', messageHTML);
                chatInputBox.value = '';
                chatInputBox.style.height = 'auto';
                scrollToBottom();
                chatInputBox.focus();
            }

            chatSendBtn.addEventListener('click', sendMessage);

            chatInputBox.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    sendMessage();
                }
            });

            // Filtros
            filterTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    // Remove active de todos
                    filterTabs.forEach(t => t.classList.remove('active'));

                    // Adiciona active ao clicado
                    this.classList.add('active');

                    const filter = this.dataset.filter;

                    chatItems.forEach(item => {
                        const type = item.dataset.type;

                        if (filter === 'todos' || type === filter) {
                            item.style.display = 'block';
                        } else {
                            item.style.display = 'none';
                        }
                    });
                });
            });

            // Pesquisa
            chatSearch.addEventListener('input', function() {
                const query = this.value.toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g, '');

                chatItems.forEach(item => {
                    const searchText = item.dataset.search.toLowerCase();

                    if (searchText.includes(query)) {
                        item.style.display = 'block';
                    } else {
                        item.style.display = 'none';
                    }
                });
            });

            // Atualizar contadores
            function updateCounts() {
                const todos = chatItems.length;
                const comprar = document.querySelectorAll('[data-type="comprar"]').length;
                const vender = document.querySelectorAll('[data-type="vender"]').length;

                document.getElementById('countTodos').textContent = todos;
                document.getElementById('countComprar').textContent = comprar;
                document.getElementById('countVender').textContent = vender;
            }

            updateCounts();
        });
    </script>

</body>
</html>
