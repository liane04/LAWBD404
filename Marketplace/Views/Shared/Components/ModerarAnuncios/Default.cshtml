@model Marketplace.Components.ModerarAnunciosSectionVM

<!-- Cabeçalho -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="mb-1 fw-bold">
            <i class="bi bi-megaphone-fill text-primary me-2"></i>Moderar Anúncios
        </h3>
        <p class="text-muted mb-0">Visualizar e gerir todos os anúncios da plataforma</p>
    </div>
</div>

<!-- Mensagens de Feedback -->
@if (TempData["AnuncioSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        <strong>@TempData["AnuncioSuccess"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["AnuncioWarning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>@TempData["AnuncioWarning"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Estatísticas de Moderação -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card shadow-sm border-0 border-start border-warning border-4 cursor-pointer" id="card-pendentes" onclick="filterAnuncios('Pendentes', this)" style="cursor: pointer; transition: transform 0.2s;">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 me-3">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-2">
                            <i class="bi bi-hourglass-split fs-4 text-warning"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="text-muted mb-1 small">Pendentes Aprovação</h6>
                        <h4 class="mb-0 fw-bold text-warning">@Model.TotalPendentes</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 border-start border-success border-4 cursor-pointer" id="card-ativos" onclick="filterAnuncios('Ativo', this)" style="cursor: pointer; transition: transform 0.2s;">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 me-3">
                        <div class="bg-success bg-opacity-10 rounded-circle p-2">
                            <i class="bi bi-check-circle-fill fs-4 text-success"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="text-muted mb-1 small">Ativos</h6>
                        <h4 class="mb-0 fw-bold text-success">@Model.TotalAtivos</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 border-start border-danger border-4 cursor-pointer" id="card-denuncias" onclick="filterAnuncios('ComDenuncias', this)" style="cursor: pointer; transition: transform 0.2s;">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 me-3">
                        <div class="bg-danger bg-opacity-10 rounded-circle p-2">
                            <i class="bi bi-exclamation-triangle-fill fs-4 text-danger"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="text-muted mb-1 small">Com Denúncias</h6>
                        <h4 class="mb-0 fw-bold text-danger">@Model.TotalDenuncias</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 border-start border-secondary border-4 cursor-pointer" id="card-pausados" onclick="filterAnuncios('Pausado', this)" style="cursor: pointer; transition: transform 0.2s;">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 me-3">
                        <div class="bg-secondary bg-opacity-10 rounded-circle p-2">
                            <i class="bi bi-pause-circle-fill fs-4 text-secondary"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="text-muted mb-1 small">Pausados/Removidos</h6>
                        <h4 class="mb-0 fw-bold text-secondary">@Model.TotalPausados</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tabela de Anúncios -->
<div class="card shadow-sm border-0 mb-5">
    <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-card-list text-primary me-2"></i>Todos os Anúncios (<span id="anuncios-counter">@Model.Anuncios.Count</span>)
        </h5>
        <button class="btn btn-outline-secondary btn-sm" onclick="resetAnuncioFilters()" id="btn-reset-anuncio-filters" style="display: none;">
            <i class="bi bi-x-circle me-1"></i>Resetar Filtros
        </button>
    </div>
    <div class="card-body p-0">
        @if (Model.Anuncios != null && Model.Anuncios.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="tabela-anuncios">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="ps-4">Anúncio</th>
                            <th scope="col">Vendedor</th>
                            <th scope="col">Preço</th>
                            <th scope="col">Visualizações</th>
                            <th scope="col" class="text-end pe-4">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var anuncio in Model.Anuncios)
                        {
                            <tr data-status="@(anuncio.HasDenuncias ? "ComDenuncias" : (anuncio.IsPausado ? "Pausado" : "Ativo"))">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(anuncio.PrimeiraImagem))
                                        {
                                            <img src="@anuncio.PrimeiraImagem" alt="@anuncio.Titulo"
                                                 class="rounded me-3" style="width: 80px; height: 60px; object-fit: cover; @(anuncio.IsPausado ? "filter: grayscale(100%); opacity: 0.7;" : "")">
                                        }
                                        else
                                        {
                                            <div class="bg-secondary bg-opacity-10 rounded me-3 d-flex align-items-center justify-content-center"
                                                 style="width: 80px; height: 60px;">
                                                <i class="bi bi-car-front fs-3 text-secondary"></i>
                                            </div>
                                        }
                                        <div>
                                            <div class="fw-bold @(anuncio.IsPausado ? "text-muted" : "")">
                                                @anuncio.Titulo
                                                @if (anuncio.IsPausado)
                                                {
                                                    <span class="badge bg-secondary ms-2">Pausado</span>
                                                }
                                            </div>
                                            <div class="small text-muted">
                                                @anuncio.MarcaNome @anuncio.ModeloNome
                                                @if (anuncio.Ano.HasValue)
                                                {
                                                    <span>• @anuncio.Ano</span>
                                                }
                                                @if (anuncio.Quilometragem.HasValue)
                                                {
                                                    <span>• @anuncio.Quilometragem.Value.ToString("N0") km</span>
                                                }
                                            </div>
                                            <div class="small text-muted">
                                                <i class="bi bi-geo-alt me-1"></i>@(anuncio.Localizacao ?? "N/A")
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-bold">@anuncio.VendedorNome</div>
                                    <div class="small text-muted">ID: @anuncio.VendedorId</div>
                                </td>
                                <td>
                                    <div class="fw-bold text-primary">@anuncio.Preco.ToString("C")</div>
                                    <div class="small text-muted">
                                        @anuncio.TipoNome
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-eye me-2 text-muted"></i>
                                        <span class="fw-bold">@anuncio.NVisualizacoes</span>
                                    </div>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-controller="Anuncios" asp-action="Details" asp-route-id="@anuncio.Id"
                                           class="btn btn-outline-info btn-sm"
                                           data-bs-toggle="tooltip" title="Ver detalhes"
                                           target="_blank">
                                            <i class="bi bi-eye-fill me-1"></i>Ver
                                        </a>

                                        <form method="post" asp-controller="Administrador" asp-action="PausarAnuncio" asp-route-id="@anuncio.Id">
                                            @Html.AntiForgeryToken()
                                            @if (anuncio.IsPausado)
                                            {
                                                <button type="submit" class="btn btn-outline-warning btn-sm"
                                                        data-bs-toggle="tooltip" title="Retomar anúncio"
                                                        onclick="return confirm('Deseja retomar este anúncio? Ele voltará a ficar visível.');">
                                                    <i class="bi bi-play-fill me-1"></i>Retomar
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-outline-warning btn-sm"
                                                        data-bs-toggle="tooltip" title="Pausar anúncio"
                                                        onclick="return confirm('Deseja pausar este anúncio? Ele ficará invisível para os utilizadores.');">
                                                    <i class="bi bi-pause-fill me-1"></i>Pausar
                                                </button>
                                            }
                                        </form>

                                        <form method="post" asp-controller="Administrador" asp-action="EliminarAnuncio" asp-route-id="@anuncio.Id">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger btn-sm"
                                                    data-bs-toggle="tooltip" title="Eliminar anúncio"
                                                    onclick="return confirm('Tem certeza que deseja eliminar este anúncio? Esta ação é irreversível.');">
                                                <i class="bi bi-trash-fill me-1"></i>Eliminar
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-inbox" style="font-size: 4rem; color: #6c757d;"></i>
                </div>
                <h5 class="text-muted mb-2">Nenhum anúncio encontrado</h5>
                <p class="text-muted mb-0">A plataforma ainda não tem anúncios publicados.</p>
            </div>
        }
    </div>
</div>

<script>
    function filterAnuncios(status, element) {
        // 1. Update Active State on Cards
        if (element) {
            // Remove active class from all cards
            document.querySelectorAll('.card[onclick^="filterAnuncios"]').forEach(card => {
                card.classList.remove('border-primary', 'bg-light');
                card.style.transform = 'scale(1)';
            });

            // Add active class to clicked card
            element.classList.add('border-primary', 'bg-light');
            element.style.transform = 'scale(1.02)';
        }

        // 2. Filter Table Rows
        const rows = document.querySelectorAll('#tabela-anuncios tbody tr');
        let visibleCount = 0;

        rows.forEach(row => {
            const rowStatus = row.getAttribute('data-status');
            if (status === 'All' || rowStatus === status) {
                row.style.display = '';
                visibleCount++;
            } else {
                row.style.display = 'none';
            }
        });

        // 3. Update Counter
        document.getElementById('anuncios-counter').textContent = visibleCount;

        // 4. Show/Hide Reset Button
        const resetButton = document.getElementById('btn-reset-anuncio-filters');
        if (status !== 'All') {
            resetButton.style.display = 'block';
        } else {
            resetButton.style.display = 'none';
        }
    }

    function resetAnuncioFilters() {
        // Reset Cards
        document.querySelectorAll('.card[onclick^="filterAnuncios"]').forEach(card => {
            card.classList.remove('border-primary', 'bg-light');
            card.style.transform = 'scale(1)';
        });

        // Show all rows
        filterAnuncios('All', null);
    }
</script>
