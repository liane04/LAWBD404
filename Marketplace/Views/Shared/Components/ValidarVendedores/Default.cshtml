@model Marketplace.Components.ValidarVendedoresSectionVM

<!-- Cabeçalho -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="mb-1 fw-bold">
            <i class="bi bi-person-check-fill text-primary me-2"></i>Validar Vendedores
        </h3>
        <p class="text-muted mb-0">Aprovar ou rejeitar pedidos de vendedor</p>
    </div>
</div>

<!-- Mensagens de Feedback -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        <strong>@TempData["Success"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>@TempData["Warning"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Estatísticas -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm border-0 border-start border-warning border-4">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 me-3">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-2">
                            <i class="bi bi-clock-history fs-4 text-warning"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="text-muted mb-1 small">Pendentes</h6>
                        <h4 class="mb-0 fw-bold text-warning">@Model.TotalPendentes</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 border-start border-success border-4">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 me-3">
                        <div class="bg-success bg-opacity-10 rounded-circle p-2">
                            <i class="bi bi-check-circle-fill fs-4 text-success"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="text-muted mb-1 small">Aprovados</h6>
                        <h4 class="mb-0 fw-bold text-success">@Model.TotalAprovados</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 border-start border-danger border-4">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 me-3">
                        <div class="bg-danger bg-opacity-10 rounded-circle p-2">
                            <i class="bi bi-x-circle-fill fs-4 text-danger"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="text-muted mb-1 small">Rejeitados</h6>
                        <h4 class="mb-0 fw-bold text-danger">@Model.TotalRejeitados</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Lista de Vendedores Pendentes -->
<div class="card shadow-sm border-0">
    <div class="card-header bg-white border-bottom">
        <h5 class="mb-0">
            <i class="bi bi-hourglass-split text-warning me-2"></i>Vendedores Pendentes de Aprovação
        </h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Pendentes != null && Model.Pendentes.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="ps-4">Vendedor</th>
                            <th scope="col">Email</th>
                            <th scope="col">NIF</th>
                            <th scope="col" class="text-end pe-4">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vendedor in Model.Pendentes)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <img src="https://placehold.co/48x48/0d6efd/ffffff?text=@(vendedor.Nome?.Substring(0, 1) ?? "V")"
                                             alt="Avatar" class="rounded-circle me-3">
                                        <div>
                                            <div class="fw-bold">@vendedor.Nome</div>
                                            <div class="small text-muted">
                                                <i class="bi bi-person-badge me-1"></i>ID: @vendedor.Id
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <i class="bi bi-envelope me-1 text-muted"></i>@vendedor.Email
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(vendedor.Nif))
                                    {
                                        <span><i class="bi bi-credit-card me-1 text-muted"></i>@vendedor.Nif</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <form method="post" style="display: inline-block;" asp-controller="Administrador" asp-action="AprovarVendedor" asp-route-id="@vendedor.Id">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-success me-1" title="Aprovar">
                                            <i class="bi bi-check-circle-fill me-1"></i>Aprovar
                                        </button>
                                    </form>
                                    <form method="post" style="display: inline-block;" asp-controller="Administrador" asp-action="RejeitarVendedor" asp-route-id="@vendedor.Id">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger" title="Rejeitar"
                                                onclick="return confirm('Tem certeza que deseja rejeitar este vendedor?');">
                                            <i class="bi bi-x-circle-fill me-1"></i>Rejeitar
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-check-circle" style="font-size: 4rem; color: #28a745;"></i>
                </div>
                <h5 class="text-muted mb-2">Nenhum vendedor pendente</h5>
                <p class="text-muted mb-0">Todos os pedidos foram processados!</p>
            </div>
        }
    </div>
</div>

@if (Model.Todos != null && Model.Todos.Any())
{
    <!-- Lista de Todos os Vendedores -->
    <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white border-bottom">
            <h5 class="mb-0">
                <i class="bi bi-people-fill text-primary me-2"></i>Todos os Vendedores
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="ps-4">Vendedor</th>
                            <th scope="col">Email</th>
                            <th scope="col">NIF</th>
                            <th scope="col">Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vendedor in Model.Todos)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <img src="https://placehold.co/48x48/0d6efd/ffffff?text=@(vendedor.Nome?.Substring(0, 1) ?? "V")"
                                             alt="Avatar" class="rounded-circle me-3">
                                        <div>
                                            <div class="fw-bold">@vendedor.Nome</div>
                                            <div class="small text-muted">
                                                <i class="bi bi-person-badge me-1"></i>ID: @vendedor.Id
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <i class="bi bi-envelope me-1 text-muted"></i>@vendedor.Email
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(vendedor.Nif))
                                    {
                                        <span><i class="bi bi-credit-card me-1 text-muted"></i>@vendedor.Nif</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var estado = string.IsNullOrWhiteSpace(vendedor.Estado) ? "Pendente" : vendedor.Estado;
                                        var badgeClass = estado == "Ativo" ? "success" : (estado == "Rejeitado" ? "danger" : "warning");
                                    }
                                    <span class="badge bg-@badgeClass">@estado</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
