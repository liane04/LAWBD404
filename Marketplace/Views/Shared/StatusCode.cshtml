@section Styles {
    <style>
        /* ==================== P√ÅGINA DE ERRO 404 ==================== */
        .page-error-404 {
            padding: 60px 0 80px;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: calc(100vh - 200px);
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }

        /* √Årea do C√≥digo de Erro */
        .error-code-bg {
            position: relative;
            height: 400px;
            background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
            border-radius: 20px;
            margin-bottom: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(37, 99, 235, 0.3);
        }

        .error-code-bg::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120"><path d="M0,60 Q300,100 600,60 T1200,60 L1200,120 L0,120 Z" fill="rgba(255,255,255,0.1)"/></svg>') repeat-x;
            background-size: 1200px 120px;
            animation: wave 15s linear infinite;
            opacity: 0.3;
        }

        @@keyframes wave {
            0% { background-position: 0 0; }
            100% { background-position: 1200px 0; }
        }

        /* Anima√ß√£o do Carro */
        .error-animation {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1;
        }

        .car-icon {
            font-size: 120px;
            color: rgba(255, 255, 255, 0.2);
            animation: car-drive 3s ease-in-out infinite;
            display: block;
        }

        @@keyframes car-drive {
            0%, 100% {
                transform: translateX(-20px) rotate(-2deg);
            }
            50% {
                transform: translateX(20px) rotate(2deg);
            }
        }

        /* Linhas da Estrada */
        .road-lines {
            position: absolute;
            top: 120%;
            left: 50%;
            transform: translateX(-50%);
            width: 300px;
            height: 100px;
            display: flex;
            gap: 40px;
            justify-content: center;
        }

        .road-line {
            width: 8px;
            height: 100%;
            background: linear-gradient(to bottom,
                rgba(255,255,255,0.6) 0%,
                rgba(255,255,255,0.6) 40%,
                transparent 40%,
                transparent 60%,
                rgba(255,255,255,0.6) 60%,
                rgba(255,255,255,0.6) 100%
            );
            border-radius: 4px;
            animation: road-scroll 1s linear infinite;
        }

        .road-line:nth-child(2) {
            animation-delay: 0.33s;
        }

        .road-line:nth-child(3) {
            animation-delay: 0.66s;
        }

        @@keyframes road-scroll {
            0% {
                transform: translateY(-60px);
                opacity: 0;
            }
            10% {
                opacity: 1;
            }
            90% {
                opacity: 1;
            }
            100% {
                transform: translateY(60px);
                opacity: 0;
            }
        }

        /* N√∫mero do Erro */
        .error-code-number {
            font-size: 140px;
            font-weight: 900;
            color: white;
            text-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            letter-spacing: 10px;
            position: relative;
            z-index: 2;
            margin: 0;
            animation: glow 2s ease-in-out infinite;
        }

        @@keyframes glow {
            0%, 100% {
                text-shadow: 0 10px 30px rgba(0, 0, 0, 0.3),
                            0 0 20px rgba(255, 255, 255, 0.5);
            }
            50% {
                text-shadow: 0 10px 30px rgba(0, 0, 0, 0.3),
                            0 0 40px rgba(255, 255, 255, 0.8),
                            0 0 60px rgba(255, 255, 255, 0.6);
            }
        }

        /* Conte√∫do da Mensagem */
        .error-content-box {
            background: white;
            border-radius: 20px;
            padding: 50px 40px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        }

        .error-emoji {
            font-size: 60px;
            animation: bounce 2s ease-in-out infinite;
        }

        @@keyframes bounce {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-20px);
            }
        }

        .error-title {
            font-size: 2rem;
            font-weight: 700;
            color: #1e293b;
        }

        .error-message {
            font-size: 1.1rem;
            line-height: 1.6;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        /* Bot√µes de A√ß√£o */
        .error-actions .btn {
            border-radius: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .error-actions .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(37, 99, 235, 0.3);
        }

        .error-actions .btn-primary {
            background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
            border: none;
        }

        .error-actions .btn-outline-primary:hover {
            background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
            border-color: transparent;
        }

        /* Links R√°pidos */
        .quick-links {
            padding-top: 30px;
            border-top: 2px solid #e2e8f0;
        }

        .quick-link {
            display: inline-flex;
            flex-direction: column;
            align-items: center;
            gap: 8px;
            padding: 15px 20px;
            background: #f8fafc;
            border-radius: 12px;
            text-decoration: none;
            color: #64748b;
            transition: all 0.3s ease;
            min-width: 100px;
        }

        .quick-link:hover {
            background: #2563eb;
            color: white;
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(37, 99, 235, 0.2);
        }

        .quick-link i {
            font-size: 24px;
        }

        .quick-link span {
            font-size: 13px;
            font-weight: 600;
        }

        /* Responsividade */
        @@media (max-width: 768px) {
            .error-code-bg {
                height: 300px;
            }

            .error-code-number {
                font-size: 100px;
                letter-spacing: 5px;
            }

            .car-icon {
                font-size: 80px;
            }

            .error-title {
                font-size: 1.5rem;
            }

            .error-message {
                font-size: 1rem;
            }

            .error-content-box {
                padding: 30px 20px;
            }

            .error-actions {
                flex-direction: column;
            }

            .error-actions .btn {
                width: 100%;
            }

            .quick-links .d-flex {
                gap: 10px !important;
            }

            .quick-link {
                min-width: 80px;
                padding: 12px 15px;
            }

            .quick-link i {
                font-size: 20px;
            }

            .quick-link span {
                font-size: 11px;
            }
        }
    </style>
}
