@{
    ViewData["Title"] = "Ocorreu um erro";
    var code = ViewData["StatusCode"] as int? ?? 0;
}

<div class="container text-center" style="padding: 6rem 0;">
    <div class="mb-4">
        <span class="display-4 fw-bold text-primary">Erro @code</span>
    </div>
    <h1 class="fw-bold mb-3">Algo correu mal.</h1>
    <p class="text-muted mb-4">Tente novamente mais tarde ou volte à página inicial.</p>

    <div class="d-flex justify-content-center gap-2 flex-wrap">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-house-door me-2"></i>Voltar ao Início
        </a>
        <a asp-controller="Anuncios" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-car-front me-2"></i>Explorar Anúncios
        </a>
    </div>
</div>

