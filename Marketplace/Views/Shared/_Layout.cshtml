                            <i class="bi bi-person me-1"></i>Visitante
                        </label>

                        <input type="radio" class="btn-check" name="mockupUserType" id="mockupComprador" autocomplete="off">
                        <label class="btn btn-outline-info" for="mockupComprador">
                            <i class="bi bi-person-check me-1"></i>Comprador
                        </label>

                        <input type="radio" class="btn-check" name="mockupUserType" id="mockupVendedor" autocomplete="off">
                        <label class="btn btn-outline-success" for="mockupVendedor">
                            <i class="bi bi-shop me-1"></i>Vendedor
                        </label>

                        <input type="radio" class="btn-check" name="mockupUserType" id="mockupAdmin" autocomplete="off" checked>
                        <label class="btn btn-outline-danger" for="mockupAdmin">
                            <i class="bi bi-shield-fill-check me-1"></i>Administrador
                        </label>
                    </div>
                </div>
                <div class="col-auto">
                    <small class="text-warning">
                        <i class="bi bi-exclamation-triangle-fill me-1"></i>
                        <strong>Atenção:</strong> Remover antes de produção
                    </small>
                </div>
