    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="@(ViewData["IsHomePage"] as bool? == true ? "home-page" : "")">
    <!-- ===== MOCKUP NAVBAR - Alternar Tipo de Utilizador (REMOVER EM PRODUÇÃO) ===== -->
    <div class="mockup-navbar bg-dark text-white py-2 fixed-top" style="z-index: 2000; border-bottom: 2px solid #fbbf24;">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-auto">
                    <span class="badge bg-warning text-dark fw-bold me-2">
                        <i class="bi bi-eye-fill me-1"></i>MOCKUP MODE
