<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 404 Car Marketplace</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="@(ViewData["IsHomePage"] as bool? == true ? "home-page" : "")" data-user-role="@(User.IsInRole("Comprador") ? "Comprador" : User.IsInRole("Vendedor") ? "Vendedor" : User.IsInRole("Administrador") ? "Administrador" : "")">
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-dark" id="mainNavbar">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/imagens/logo.png" alt="404 Car" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    </ul>

                    <div class="d-flex align-items-center gap-2 flex-wrap">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @* ===== UTILIZADOR AUTENTICADO ===== *@

                            @if (User.IsInRole("Vendedor"))
                            {
                                @* VENDEDOR *@
                                <a class="btn btn-primary me-2 d-none d-lg-inline-block" asp-controller="Anuncios" asp-action="Create">
                                    <i class="bi bi-plus-circle-fill me-1"></i>CRIAR ANÚNCIO
                                </a>
                                <div class="dropdown d-none d-lg-inline-block">
                                    <a href="#" class="d-flex align-items-center link-light text-decoration-none dropdown-toggle"
                                       id="dropdownVendedor" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-circle fs-4 me-2"></i>
                                        <span class="d-none d-lg-inline">Olá, @User.Identity.Name!</span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="dropdownVendedor">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Mensagens" asp-action="Index">
                                                <i class="bi bi-chat-dots me-2"></i>Mensagens
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Utilizadores" asp-action="Notificacoes">
                                                <i class="bi bi-bell me-2"></i>Notificações
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Utilizadores" asp-action="Perfil" asp-fragment="favoritos">
                                                <i class="bi bi-heart me-2"></i>Favoritos
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Utilizadores" asp-action="Perfil">
                                                <i class="bi bi-person me-2"></i>Perfil
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-controller="Utilizadores" asp-action="Logout" method="post" class="d-inline">
                                                <button type="submit" class="dropdown-item text-danger" style="border: none; background: none; cursor: pointer; width: 100%; text-align: left;">
                                                    <i class="bi bi-box-arrow-right me-2"></i>Sair
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>

                                @* Menu Mobile - Vendedor *@
                                <div class="w-100 d-lg-none mt-3">
                                    <a class="btn btn-primary w-100 mb-2 d-block" asp-controller="Anuncios" asp-action="Create">
                                        <i class="bi bi-plus-circle-fill me-2"></i>Criar Anúncio
                                    </a>
                                    <a class="btn btn-outline-light w-100 mb-2 d-block" asp-controller="Mensagens" asp-action="Index">
                                        <i class="bi bi-chat-dots me-2"></i>Mensagens
                                    </a>
                                    <a class="btn btn-outline-light w-100 mb-2 d-block" asp-controller="Utilizadores" asp-action="Perfil">
                                        <i class="bi bi-person me-2"></i>Perfil
                                    </a>
                                    <form asp-controller="Utilizadores" asp-action="Logout" method="post">
                                        <button type="submit" class="btn btn-outline-danger w-100 d-block">
                                            <i class="bi bi-box-arrow-right me-2"></i>Sair
                                        </button>
                                    </form>
                                </div>
                            }
                            else if (User.IsInRole("Administrador"))
                            {
                                @* ADMINISTRADOR *@
                                <div class="dropdown d-none d-lg-inline-block">
                                    <a href="#" class="d-block link-light text-decoration-none dropdown-toggle" id="dropdownAdmin" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-fill-gear fs-4 me-1"></i>
                                        <span class="d-none d-lg-inline">Olá, @User.Identity.Name!</span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end text-small shadow" aria-labelledby="dropdownAdmin">
                                        <li><a class="dropdown-item" asp-controller="Administrador" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i>Painel de Gestão</a></li>
                                        <li><a class="dropdown-item" asp-controller="Utilizadores" asp-action="Notificacoes"><i class="bi bi-bell me-2"></i>Notificações</a></li>
                                        <li><a class="dropdown-item" asp-controller="Utilizadores" asp-action="Perfil"><i class="bi bi-person me-2"></i>Ver Perfil Pessoal</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-controller="Utilizadores" asp-action="Logout" method="post" class="d-inline">
                                                <button type="submit" class="dropdown-item text-danger" style="border: none; background: none; cursor: pointer; width: 100%; text-align: left;">
                                                    <i class="bi bi-box-arrow-right me-2"></i>Sair
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>

                                @* Menu Mobile - Admin *@
                                <div class="w-100 d-lg-none mt-3">
                                    <a class="btn btn-outline-light w-100 mb-2 d-block" asp-controller="Administrador" asp-action="Index">
                                        <i class="bi bi-speedometer2 me-2"></i>Painel de Gestão
                                    </a>
                                    <a class="btn btn-outline-light w-100 mb-2 d-block" asp-controller="Utilizadores" asp-action="Perfil">
                                        <i class="bi bi-person me-2"></i>Ver Perfil Pessoal
                                    </a>
                                    <form asp-controller="Utilizadores" asp-action="Logout" method="post">
                                        <button type="submit" class="btn btn-outline-danger w-100 d-block">
                                            <i class="bi bi-box-arrow-right me-2"></i>Sair
                                        </button>
                                    </form>
                                </div>
                            }
                            else if (User.IsInRole("Comprador"))
                            {
                                @* COMPRADOR *@
                                <div class="dropdown d-none d-lg-inline-block">
                                    <a href="#" class="d-flex align-items-center link-light text-decoration-none dropdown-toggle"
                                       id="dropdownComprador" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-circle fs-4 me-2"></i>
                                        <span class="d-none d-lg-inline">Olá, @User.Identity.Name!</span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="dropdownComprador">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Mensagens" asp-action="Index">
                                                <i class="bi bi-chat-dots me-2"></i>Mensagens
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Utilizadores" asp-action="Notificacoes">
                                                <i class="bi bi-bell me-2"></i>Notificações
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Utilizadores" asp-action="Perfil">
                                                <i class="bi bi-person me-2"></i>Perfil
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-controller="Utilizadores" asp-action="Logout" method="post" class="d-inline">
                                                <button type="submit" class="dropdown-item text-danger" style="border: none; background: none; cursor: pointer; width: 100%; text-align: left;">
                                                    <i class="bi bi-box-arrow-right me-2"></i>Sair
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>

                                @* Menu Mobile - Comprador *@
                                <div class="w-100 d-lg-none mt-3">
                                    <a class="btn btn-outline-light w-100 mb-2 d-block" asp-controller="Mensagens" asp-action="Index">
                                        <i class="bi bi-chat-dots me-2"></i>Mensagens
                                    </a>
                                    <a class="btn btn-outline-light w-100 mb-2 d-block" asp-controller="Utilizadores" asp-action="Perfil">
                                        <i class="bi bi-person me-2"></i>Perfil
                                    </a>
                                    <form asp-controller="Utilizadores" asp-action="Logout" method="post">
                                        <button type="submit" class="btn btn-outline-danger w-100 d-block">
                                            <i class="bi bi-box-arrow-right me-2"></i>Sair
                                        </button>
                                    </form>
                                </div>
                            }
                        }
                        else
                        {
                            @* ===== VISITANTE (NÃO AUTENTICADO) ===== *@
                            <a class="btn btn-outline-light" asp-controller="Utilizadores" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Entrar
                            </a>
                            <a class="btn btn-primary" asp-controller="Utilizadores" asp-action="Registar">
                                <i class="bi bi-person-plus me-1"></i>Registar
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer pt-5 pb-4">
        <div class="container text-center text-md-start">
            <div class="row">
                <div class="col-md-4 col-lg-4 col-xl-4 mx-auto mb-4">
                    <div class="d-flex align-items-center mb-3">
                        <img src="~/imagens/logo.png" alt="404 Car Logo" style="height: 50px; width: auto; margin-right: 1rem;" />
                        <h5 class="text-uppercase fw-bold mb-0">404 Car</h5>
                    </div>
                    <hr class="mb-4 mt-0 d-inline-block mx-auto" style="width: 60px; background-color: #8B1A1A; height: 2px" />
                    <p>
                        A sua plataforma de confiança para comprar e vender carros usados.
                        Encontre as melhores ofertas do mercado de forma segura e eficiente.
                    </p>
                </div>

                <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                    <h6 class="text-uppercase fw-bold">Links Úteis</h6>
                    <hr class="mb-4 mt-0 d-inline-block mx-auto" style="width: 60px; background-color: #8B1A1A; height: 2px" />
                    <p>
                        <a asp-controller="Home" asp-action="Terms" class="text-white-50">
                            <i class="bi bi-chevron-right"></i> Termos de Uso
                        </a>
                    </p>
                    <p>
                        <a asp-controller="Home" asp-action="Privacy" class="text-white-50">
                            <i class="bi bi-chevron-right"></i> Politica de Privacidade
                        </a>
                    </p>
                    <p>
                        <a asp-controller="Faq" asp-action="Index" class="text-white-50">
                            <i class="bi bi-chevron-right"></i> FAQ
                        </a>
                    </p>



                </div>

                <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mb-4">
                    <h6 class="text-uppercase fw-bold">Categorias</h6>
                    <hr class="mb-4 mt-0 d-inline-block mx-auto" style="width: 60px; background-color: #8B1A1A; height: 2px" />
                    <p>
                        <a asp-controller="Home" asp-action="Terms" class="text-white-50">
                            <i class="bi bi-chevron-right"></i> Carros Ligeiros
                        </a>
                    </p>
                    <p>
                        <a asp-controller="Home" asp-action="Terms" class="text-white-50">
                            <i class="bi bi-chevron-right"></i> SUVs
                        </a>
                    </p>
                    <p>
                        <a asp-controller="Home" asp-action="Terms" class="text-white-50">
                            <i class="bi bi-chevron-right"></i> Comerciais
                        </a>
                    </p>
                    <p>
                        <a asp-controller="Home" asp-action="Terms" class="text-white-50">
                            <i class="bi bi-chevron-right"></i> Clássicos
                        </a>
                    </p>
                </div>

                <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                    <h6 class="text-uppercase fw-bold">Contacto</h6>
                    <hr class="mb-4 mt-0 d-inline-block mx-auto" style="width: 60px; background-color: #8B1A1A; height: 2px" />
                    <p>
                        <i class="bi bi-geo-alt-fill me-3"></i>
                        Vila Real, Portugal
                    </p>
                    <p>
                        <i class="bi bi-envelope-fill me-3"></i>
                        info@404car.pt
                    </p>
                    <p>
                        <i class="bi bi-telephone-fill me-3"></i>
                        +351 259 123 456
                    </p>
                    <div class="mt-3">
                        <a href="#!" class="text-white-50 me-3" title="Facebook">
                            <i class="bi bi-facebook fs-5"></i>
                        </a>
                        <a href="#!" class="text-white-50 me-3" title="Instagram">
                            <i class="bi bi-instagram fs-5"></i>
                        </a>
                        <a href="#!" class="text-white-50 me-3" title="LinkedIn">
                            <i class="bi bi-linkedin fs-5"></i>
                        </a>
                        <a href="#!" class="text-white-50" title="WhatsApp">
                            <i class="bi bi-whatsapp fs-5"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center p-3 mt-4" style="background-color: rgba(0, 0, 0, 0.2)">
            <div class="container">
                <span>© @DateTime.Now.Year - 404 Car Marketplace - Todos os direitos reservados.</span>
                <span class="mx-3">|</span>
                <span>Desenvolvido por grupo 404</span>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <partial name="_ChatWidget" />
</body>
</html>
