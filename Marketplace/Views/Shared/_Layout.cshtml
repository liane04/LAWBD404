    <!-- ===== MOCKUP MODE SCRIPT (REMOVER EM PRODUÇÃO) ===== -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // ===== Sistema de Mockup de Tipo de Utilizador =====
            const mockupVisitante = document.getElementById('mockupVisitante');
            const mockupComprador = document.getElementById('mockupComprador');
            const mockupVendedor = document.getElementById('mockupVendedor');
            const mockupAdmin = document.getElementById('mockupAdmin');

            // Função para obter o tipo de utilizador selecionado do localStorage
            function getSavedUserType() {
                return localStorage.getItem('mockupUserType') || 'admin';
            }

            // Função para salvar o tipo de utilizador no localStorage
            function saveUserType(userType) {
                localStorage.setItem('mockupUserType', userType);
            }

            // Função para atualizar a visualização baseada no tipo de utilizador
            function updateMockupView(userType) {
                console.log('Mockup Mode: Alternando para', userType);

                // Esconder todos os estados primeiro
                document.querySelectorAll('[data-mockup-user-type]').forEach(el => {
                    el.style.display = 'none';
                });

                // Mostrar o estado selecionado
                document.querySelectorAll(`[data-mockup-user-type="${userType}"]`).forEach(el => {
                    el.style.display = '';
                });

                // Salvar preferência
                saveUserType(userType);

                // Atualizar corpo do site baseado no tipo
                document.body.setAttribute('data-mockup-mode', userType);

                // Adicionar feedback visual
                console.log(`✅ Mockup Mode ativado: ${userType}`);
            }

            // Event listeners para os botões de toggle
            if (mockupVisitante) {
                mockupVisitante.addEventListener('change', function () {
                    if (this.checked) updateMockupView('visitante');
                });
            }

            if (mockupComprador) {
                mockupComprador.addEventListener('change', function () {
                    if (this.checked) updateMockupView('comprador');
                });
            }

            if (mockupVendedor) {
                mockupVendedor.addEventListener('change', function () {
                    if (this.checked) updateMockupView('vendedor');
                });
            }

            if (mockupAdmin) {
                mockupAdmin.addEventListener('change', function () {
                    if (this.checked) updateMockupView('admin');
                });
            }

            // Inicializar com o tipo salvo ou admin por padrão
            const savedType = getSavedUserType();
            const radioToCheck = document.getElementById(`mockup${savedType.charAt(0).toUpperCase() + savedType.slice(1)}`);

            if (radioToCheck) {
                radioToCheck.checked = true;
                updateMockupView(savedType);
            } else {
                // Fallback para admin se não encontrar o radio
                if (mockupAdmin) {
                    mockupAdmin.checked = true;
                    updateMockupView('admin');
                }
            }

            // Ajustar o espaçamento do conteúdo para não ficar tapado pelo header fixo
            function adjustMainOffset() {
                const mock = document.querySelector('.mockup-navbar');
                const header = document.querySelector('header');
                const main = document.querySelector('.main-content');
                const mockH = mock ? mock.offsetHeight : 0; // ~46px
                const headerH = header ? header.offsetHeight : 0; // altura da navbar
                if (main) {
                    main.style.paddingTop = (mockH + headerH + 16) + 'px'; // +16px de folga
                } else {
                    // fallback mínimo no body
                    document.body.style.paddingTop = (mockH + headerH) + 'px';
                }
            }

            adjustMainOffset();
            window.addEventListener('resize', adjustMainOffset);
        });
    </script>
    <!-- ===== FIM MOCKUP MODE SCRIPT ===== -->

    @await RenderSectionAsync("Scripts", required: false)
