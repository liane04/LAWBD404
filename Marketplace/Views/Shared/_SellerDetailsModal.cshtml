@model Marketplace.Models.Vendedor

@if (Model == null)
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>Vendedor não encontrado.
    </div>
}
else
{
    <div class="modal-header border-bottom-0 pb-0">
        <h5 class="modal-title fw-bold">Detalhes do Vendedor</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body pt-3">
        <div class="text-center mb-4">
            <div class="position-relative d-inline-block mb-3">
                <img src="@(Model.ImagemPerfil ?? "https://placehold.co/100x100/0d6efd/ffffff?text=" + (Model.Nome?.Substring(0, 1) ?? "V"))" 
                     class="rounded-circle shadow-sm" 
                     alt="Foto do Vendedor" 
                     style="width: 100px; height: 100px; object-fit: cover; border: 3px solid #fff; box-shadow: 0 0 0 1px #dee2e6;">
                <span class="position-absolute bottom-0 end-0 bg-success border border-white rounded-circle p-1" title="Verificado">
                    <span class="visually-hidden">Verificado</span>
                    <i class="bi bi-check text-white" style="font-size: 0.8rem;"></i>
                </span>
            </div>
            <h4 class="mb-1 fw-bold">@Model.Nome</h4>
            <div class="d-flex justify-content-center align-items-center gap-2 mb-2">
                <span class="badge bg-light text-dark border"><i class="bi bi-shop me-1"></i>Vendedor Profissional</span>
            </div>

            <div class="d-flex justify-content-center align-items-center gap-3 mt-3">
                <div class="text-center px-3 border-end">
                    <div class="h5 mb-0 fw-bold text-primary">@Model.Anuncios.Count</div>
                    <small class="text-muted">Anúncios</small>
                </div>
                <div class="text-center px-3">
                    <div class="h5 mb-0 fw-bold text-warning">
                        @Model.NotaMedia.ToString("0.0") <i class="bi bi-star-fill small"></i>
                    </div>
                    <small class="text-muted">@Model.NumeroAvaliacoes avaliações</small>
                </div>
            </div>
        </div>

        <ul class="nav nav-tabs nav-fill mb-3" id="vendedorTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="sobre-tab" data-bs-toggle="tab" data-bs-target="#sobre" type="button" role="tab">Informações</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="avaliacoes-tab" data-bs-toggle="tab" data-bs-target="#avaliacoes" type="button" role="tab">Avaliações (@Model.NumeroAvaliacoes)</button>
            </li>
        </ul>

        <div class="tab-content" id="vendedorTabContent">
            <!-- Aba Informações -->
            <div class="tab-pane fade show active" id="sobre" role="tabpanel">
                <div class="card border-0 shadow-sm bg-light">
                    <div class="card-body">
                        <ul class="list-unstyled small text-muted mb-0">
                            <li class="mb-3 d-flex align-items-center">
                                <i class="bi bi-calendar3 me-3 fs-5 text-primary"></i>
                                <div>
                                    <span class="d-block fw-bold text-dark">Membro desde</span>
                                    <span>@DateTime.Now.ToString("MMMM yyyy")</span>
                                </div>
                            </li>
                            <li class="mb-3 d-flex align-items-center">
                                <i class="bi bi-geo-alt me-3 fs-5 text-danger"></i>
                                <div>
                                    <span class="d-block fw-bold text-dark">Localização</span>
                                    <span>@(Model.Morada?.Localidade ?? "Portugal"), Portugal</span>
                                </div>
                            </li>
                        </ul>

                        @if (!string.IsNullOrEmpty(Model.DadosFaturacao))
                        {
                            <div class="mt-3 pt-3 border-top">
                                <h6 class="fw-bold mb-2 small text-dark"><i class="bi bi-receipt me-2"></i>Dados de Faturação</h6>
                                <p class="small text-muted mb-0 bg-white p-2 rounded border">@Model.DadosFaturacao</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Aba Avaliações -->
            <div class="tab-pane fade" id="avaliacoes" role="tabpanel">
                <div class="card border-0 shadow-sm bg-light">
                    <div class="card-body">
                        
                        <!-- Formulário de Avaliação -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            var userIdClaim = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                            if (int.TryParse(userIdClaim, out var loggedUserId) && Model.IdentityUserId != loggedUserId)
                            {
                                <div class="card border-0 mb-4 shadow-sm">
                                    <div class="card-body bg-white rounded">
                                        <h6 class="fw-bold mb-3 small text-uppercase text-muted">Avaliar este vendedor</h6>
                                        <form asp-controller="Utilizadores" asp-action="AvaliarVendedor" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="vendedorId" value="@Model.Id" />
                                            <input type="hidden" name="returnUrl" value="@Context.Request.Headers["Referer"]" />
                                            
                                            <div class="mb-3">
                                                <div class="rating-css">
                                                    <div class="star-icon">
                                                        <input type="radio" name="nota" value="5" id="rating5">
                                                        <label for="rating5" class="bi bi-star-fill"></label>
                                                        
                                                        <input type="radio" name="nota" value="4" id="rating4">
                                                        <label for="rating4" class="bi bi-star-fill"></label>
                                                        
                                                        <input type="radio" name="nota" value="3" id="rating3">
                                                        <label for="rating3" class="bi bi-star-fill"></label>
                                                        
                                                        <input type="radio" name="nota" value="2" id="rating2">
                                                        <label for="rating2" class="bi bi-star-fill"></label>
                                                        
                                                        <input type="radio" name="nota" value="1" id="rating1">
                                                        <label for="rating1" class="bi bi-star-fill"></label>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="mb-3">
                                                <textarea name="comentario" class="form-control form-control-sm" rows="2" placeholder="Partilhe a sua experiência com este vendedor (opcional)..." maxlength="500"></textarea>
                                            </div>
                                            
                                            <div class="text-end">
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="bi bi-send-fill me-1"></i>Enviar Avaliação
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                
                                <style>
                                    .rating-css .star-icon {
                                        display: flex;
                                        flex-direction: row-reverse;
                                        justify-content: flex-end;
                                    }
                                    .rating-css input { display: none; }
                                    .rating-css label { 
                                        font-size: 20px; 
                                        color: #ccc; 
                                        cursor: pointer; 
                                        padding: 0 2px;
                                    }
                                    .rating-css input:checked ~ label,
                                    .rating-css input:checked + label { 
                                        color: #ffe400; 
                                    }
                                    .rating-css label:hover ~ label,
                                    .rating-css label:hover { 
                                        color: #ffe400; 
                                    }
                                </style>
                            }
                        }

                        @if (Model.AvaliacoesRecebidas != null && Model.AvaliacoesRecebidas.Any())
                        {
                            <div class="avaliacoes-list pr-1" style="max-height: 300px; overflow-y: auto;">
                                @foreach (var avaliacao in Model.AvaliacoesRecebidas.OrderByDescending(a => a.Data))
                                {
                                    <div class="card mb-2 border mt-1">
                                        <div class="card-body p-3">
                                            <div class="d-flex justify-content-between mb-2">
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-placeholder rounded-circle bg-primary text-white me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px; font-size: 0.8rem;">
                                                        @(avaliacao.Comprador.Nome?.Substring(0,1).ToUpper() ?? "U")
                                                    </div>
                                                    <div>
                                                        <div class="fw-bold small text-dark">@avaliacao.Comprador.Nome</div>
                                                        <div class="text-muted x-small" style="font-size: 0.7rem;">@avaliacao.Data.ToString("dd MMM yyyy")</div>
                                                    </div>
                                                </div>
                                                <div class="text-warning small">
                                                    @for(int i=0; i<avaliacao.Nota; i++) { <i class="bi bi-star-fill"></i> }
                                                    @for(int i=avaliacao.Nota; i<5; i++) { <i class="bi bi-star"></i> }
                                                </div>
                                            </div>
                                            @if (!string.IsNullOrEmpty(avaliacao.Comentario))
                                            {
                                                <p class="mb-0 small text-secondary fst-italic">"@avaliacao.Comentario"</p>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4 text-muted bg-white rounded border border-dashed">
                                <i class="bi bi-chat-square-text fs-3 mb-2 d-block text-secondary opacity-50"></i>
                                <p class="mb-0">Ainda não existem avaliações para este vendedor.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer bg-light border-top-0">
        <button type="button" class="btn btn-primary w-100" data-bs-dismiss="modal">Fechar</button>
    </div>
}
