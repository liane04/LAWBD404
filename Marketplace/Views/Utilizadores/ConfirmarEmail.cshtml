@{
    ViewData["Title"] = "Confirmação de Email";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DriveDeal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 2rem 0;
        }

        .confirmation-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            padding: 3rem;
            max-width: 500px;
            margin: 0 auto;
            text-align: center;
        }

        .confirmation-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            font-size: 2.5rem;
        }

        .confirmation-icon.success {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .confirmation-icon.error {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }

        .confirmation-title {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 1rem;
            color: #2d3748;
        }

        .confirmation-message {
            font-size: 1rem;
            color: #718096;
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .btn-primary-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 0.75rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            color: white;
        }

        .email-info {
            background: #f7fafc;
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
            color: #4a5568;
        }

        .countdown {
            font-size: 0.85rem;
            color: #a0aec0;
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <!-- Logo no topo -->
    <div class="position-absolute top-0 start-0 p-4">
        <a href="/" class="text-decoration-none">
            <h1 class="h4 mb-0" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; font-weight: 800;">
                <i class="bi bi-car-front-fill"></i> DriveDeal
            </h1>
        </a>
    </div>

    <div class="container">
        <div class="confirmation-card">
            @if (ViewBag.Sucesso)
            {
                <div class="confirmation-icon success">
                    <i class="bi bi-check-circle-fill"></i>
                </div>
                <h1 class="confirmation-title">Email Confirmado!</h1>
            }
            else
            {
                <div class="confirmation-icon error">
                    <i class="bi bi-exclamation-circle-fill"></i>
                </div>
                <h1 class="confirmation-title">Erro na Confirmação</h1>
            }

            @if (!string.IsNullOrEmpty(ViewBag.Email))
            {
                <div class="email-info">
                    <i class="bi bi-envelope-fill"></i> @ViewBag.Email
                </div>
            }

            <p class="confirmation-message">
                @ViewBag.Mensagem
            </p>

            @if (ViewBag.Sucesso)
            {
                <a href="/Utilizadores/Login" class="btn-primary-custom">
                    <i class="bi bi-box-arrow-in-right"></i> Ir para Login
                </a>
                <div class="countdown" id="countdown">
                    Será redirecionado automaticamente em <strong id="seconds">5</strong> segundos...
                </div>
            }
            else
            {
                <a href="/Utilizadores/Login" class="btn-primary-custom">
                    <i class="bi bi-arrow-left"></i> Voltar para Login
                </a>
            }
        </div>
    </div>

    @if (ViewBag.Sucesso)
    {
        <script>
            // Auto-redirect após 5 segundos se sucesso
            let seconds = 5;
            const countdownElement = document.getElementById('seconds');

            const interval = setInterval(() => {
                seconds--;
                countdownElement.textContent = seconds;

                if (seconds <= 0) {
                    clearInterval(interval);
                    window.location.href = '/Utilizadores/Login';
                }
            }, 1000);
        </script>
    }
</body>
</html>
