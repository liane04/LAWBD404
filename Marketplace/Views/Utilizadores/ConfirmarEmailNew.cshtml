@{
    ViewData["Title"] = "Confirmação de Email";
}

<div class="container py-5" style="min-height:60vh;">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 text-center">
                    @if (ViewBag.Sucesso == true)
                    {
                        <div class="mb-3 text-success">
                            <i class="bi bi-check-circle-fill" style="font-size: 2.5rem;"></i>
                        </div>
                        <h1 class="h4 fw-bold mb-2">Email confirmado!</h1>
                    }
                    else
                    {
                        <div class="mb-3 text-danger">
                            <i class="bi bi-exclamation-circle-fill" style="font-size: 2.5rem;"></i>
                        </div>
                        <h1 class="h4 fw-bold mb-2">Erro na confirmação</h1>
                    }

                    @if (!string.IsNullOrEmpty(ViewBag.Email as string))
                    {
                        <div class="alert alert-light border text-start d-flex align-items-center gap-2" role="alert">
                            <i class="bi bi-envelope-fill text-primary"></i>
                            <div><strong>@ViewBag.Email</strong></div>
                        </div>
                    }

                    <p class="text-muted mb-4">@ViewBag.Mensagem</p>

                    @if (ViewBag.Sucesso == true)
                    {
                        <a href="/Utilizadores/Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Ir para login
                        </a>
                        <div class="small text-muted mt-2" id="countdown">
                            Será redirecionado em <strong id="seconds">5</strong> segundos…
                        </div>
                    }
                    else
                    {
                        <a href="/Utilizadores/Login" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left me-1"></i> Voltar ao login
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.Sucesso == true)
{
    <script>
        let seconds = 5;
        const countdownElement = document.getElementById('seconds');
        const interval = setInterval(() => {
            seconds--;
            countdownElement.textContent = seconds;
            if (seconds <= 0) {
                clearInterval(interval);
                window.location.href = '/Utilizadores/Login';
            }
        }, 1000);
    </script>
}

