@{
    ViewData["Title"] = "Esqueceu a Palavra-passe";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 404 RIDE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 2rem 0;
        }
    </style>
</head>
<body>
    <!-- Logo no topo -->
    <div class="position-absolute top-0 start-0 p-4">
        <a asp-controller="Home" asp-action="Index">
            <img src="~/imagens/logo.png" alt="404 RIDE" style="height: 50px; width: auto;" />
        </a>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8 col-xl-7">
                <div class="card shadow-lg border-0" style="border-radius: 1.5rem; overflow: hidden;">
                    <div class="row g-0">
                        <!-- Coluna da esquerda - Informação visual -->
                        <div class="col-lg-5 d-none d-lg-flex" style="background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);">
                            <div class="p-5 text-white d-flex flex-column justify-content-between w-100">
                                <div>
                                    <img src="~/imagens/logo_branco.png" alt="404 RIDE" class="mb-4" style="height: 60px; width: auto;" />
                                    <h3 class="fw-bold mb-3">Recuperar Palavra-passe</h3>
                                    <p style="color: rgba(255,255,255,0.8);">Não se preocupe! Introduza o seu email e enviaremos um link para redefinir a sua palavra-passe.</p>
                                </div>
                                <div>
                                    <div class="mb-3 d-flex align-items-center">
                                        <i class="bi bi-shield-check text-success me-2"></i>
                                        <span>Processo seguro</span>
                                    </div>
                                    <div class="mb-3 d-flex align-items-center">
                                        <i class="bi bi-clock text-success me-2"></i>
                                        <span>Link válido por 24h</span>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-envelope-check text-success me-2"></i>
                                        <span>Email verificado</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Coluna da direita - Formulário -->
                        <div class="col-lg-7">
                            <div class="p-4 p-lg-5">
                                @if (ViewBag.Sucesso != null && ViewBag.Sucesso)
                                {
                                    <!-- Success State -->
                                    <div class="text-center">
                                        <div class="mb-4 d-lg-none">
                                            <img src="~/imagens/logo.png" alt="404 RIDE" class="mb-3" style="height: 50px; width: auto;" />
                                        </div>

                                        <div class="mb-4">
                                            <div class="d-flex justify-content-center mb-3">
                                                <div style="width: 80px; height: 80px; border-radius: 50%; background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%); display: flex; align-items: center; justify-content: center;">
                                                    <i class="bi bi-envelope-check-fill text-white" style="font-size: 2.5rem;"></i>
                                                </div>
                                            </div>
                                            <h3 class="fw-bold mb-2">Email Enviado!</h3>
                                        </div>

                                        <div class="alert alert-success border-0 shadow-sm" style="border-radius: 0.75rem;">
                                            <p class="mb-2"><strong>Verifique o seu email: @ViewBag.Email</strong></p>
                                            <p class="mb-0 small text-muted">Enviámos um link para redefinir a sua palavra-passe.</p>
                                        </div>

                                        @if (ViewBag.EmailEnviado != null && !ViewBag.EmailEnviado && ViewBag.LinkRecuperacao != null)
                                        {
                                            <div class="alert alert-warning border-0 shadow-sm mt-3" style="border-radius: 0.75rem;">
                                                <div class="d-flex align-items-start">
                                                    <i class="bi bi-exclamation-triangle-fill me-2 mt-1"></i>
                                                    <div class="flex-grow-1 text-start">
                                                        <strong>Modo de Desenvolvimento:</strong>
                                                        <p class="mb-2 small">O email não pôde ser enviado. Use o link abaixo:</p>
                                                        <div class="p-2" style="background: rgba(255,255,255,0.7); border-radius: 0.5rem; word-break: break-all; font-size: 0.8rem;">
                                                            <a href="@ViewBag.LinkRecuperacao" class="text-primary">@ViewBag.LinkRecuperacao</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                        <p class="text-muted small mt-3">
                                            Se não recebeu o email, verifique a pasta de spam ou tente novamente.
                                        </p>

                                        <div class="d-grid mt-4">
                                            <a href="/Utilizadores/Login" class="btn btn-outline-primary btn-lg" style="border-radius: 0.75rem;">
                                                <i class="bi bi-arrow-left me-2"></i>Voltar ao Login
                                            </a>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <!-- Form State -->
                                    <!-- Header mobile -->
                                    <div class="text-center mb-4 d-lg-none">
                                        <img src="~/imagens/logo.png" alt="404 RIDE" class="mb-3" style="height: 50px; width: auto;" />
                                        <h3 class="fw-bold">Esqueceu a Palavra-passe?</h3>
                                        <p class="text-muted">Recupere o acesso à sua conta</p>
                                    </div>

                                    <!-- Header desktop -->
                                    <div class="mb-4 d-none d-lg-block">
                                        <h3 class="fw-bold mb-2">Esqueceu a Palavra-passe?</h3>
                                        <p class="text-muted">Introduza o seu email para receber o link de recuperação</p>
                                    </div>

                                    @if (!string.IsNullOrEmpty(ViewBag.Erro))
                                    {
                                        <div class="alert alert-danger border-0 shadow-sm" style="border-radius: 0.75rem;">
                                            <i class="bi bi-exclamation-circle-fill me-2"></i>@ViewBag.Erro
                                        </div>
                                    }

                                    <form method="post" asp-action="EsqueceuPassword">
                                        @Html.AntiForgeryToken()

                                        <div class="mb-4">
                                            <label for="email" class="form-label fw-semibold">
                                                <i class="bi bi-envelope-fill me-2 text-primary"></i>Email
                                            </label>
                                            <input type="email" class="form-control form-control-lg" id="email" name="email"
                                                   placeholder="exemplo@email.com" required autofocus
                                                   style="border-radius: 0.75rem; border: 2px solid #e5e7eb;" />
                                        </div>

                                        <div class="d-grid mb-3">
                                            <button type="submit" class="btn btn-primary btn-lg" style="border-radius: 0.75rem; background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%); border: none;">
                                                <i class="bi bi-send-fill me-2"></i>Enviar Link de Recuperação
                                            </button>
                                        </div>

                                        <div class="d-grid">
                                            <a href="/Utilizadores/Login" class="btn btn-outline-secondary btn-lg" style="border-radius: 0.75rem;">
                                                <i class="bi bi-arrow-left me-2"></i>Voltar ao Login
                                            </a>
                                        </div>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
