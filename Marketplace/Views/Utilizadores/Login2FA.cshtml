@model Marketplace.Controllers.UtilizadoresController.TwoFactorViewModel
@{
    ViewData["Title"] = "Confirmação em 2 Passos";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 70vh;">
    <div class="card shadow-sm border-0" style="max-width: 480px; width: 100%;">
        <div class="card-body p-4">
            <div class="text-center mb-3">
                <div class="mb-2">
                    <i class="bi bi-shield-lock text-primary" style="font-size: 2.4rem;"></i>
                </div>
                <h4 class="fw-bold">Introduza o código de 2FA</h4>
                <p class="text-muted mb-0">Abra a sua app de autenticação e introduza o código de 6 dígitos.</p>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <form asp-action="Login2FA" method="post" class="mt-3">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReturnUrl" />
                <input type="hidden" asp-for="RememberMe" />

                <div class="mb-3">
                    <label asp-for="Code" class="form-label">Código</label>
                    <input asp-for="Code" class="form-control" autocomplete="one-time-code" inputmode="numeric" maxlength="8" placeholder="000000" required />
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMachine" class="form-check-input" />
                    <label class="form-check-label" asp-for="RememberMachine">Confiar neste dispositivo</label>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-unlock me-1"></i>Confirmar
                </button>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Login" class="text-muted">Voltar ao login</a>
            </div>
        </div>
    </div>
</div>
