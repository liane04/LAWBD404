@model IEnumerable<Marketplace.Models.Notificacoes>

@{
    ViewData["Title"] = "Notificações";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0">
                    <i class="bi bi-bell-fill text-primary me-2"></i>Notificações
                </h1>
                <span class="badge bg-secondary rounded-pill">@Model.Count()</span>
            </div>

            @if (Model.Any())
            {
                <div class="list-group shadow-sm">
                    @foreach (var notif in Model)
                    {
                        <div class="list-group-item list-group-item-action p-4 border-0 border-bottom">
                            <div class="d-flex w-100 justify-content-between align-items-center mb-2">
                                <div>
                                    @if (notif.FiltrosFavId.HasValue)
                                    {
                                        <span class="badge bg-info text-dark me-2">
                                            <i class="bi bi-search me-1"></i>Pesquisa Guardada
                                        </span>
                                    }
                                    else if (notif.MarcasFavId.HasValue)
                                    {
                                        <span class="badge bg-danger me-2">
                                            <i class="bi bi-heart-fill me-1"></i>Marca Favorita
                                        </span>
                                    }
                                    else if (notif.AnuncioFavId.HasValue)
                                    {
                                        <span class="badge bg-warning text-dark me-2">
                                            <i class="bi bi-star-fill me-1"></i>Anúncio Favorito
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary me-2">Info</span>
                                    }
                                    <small class="text-muted">@notif.Data.ToString("dd/MM/yyyy HH:mm")</small>
                                </div>
                            </div>
                            <p class="mb-1 text-dark">@notif.Conteudo</p>
                            
                            @if (notif.FiltrosFavId.HasValue && notif.FiltrosFav != null)
                            {
                                <div class="mt-3">
                                    <a href="@Url.Action("Index", "Anuncios", new { 
                                       marcaId = notif.FiltrosFav.MarcaId,
                                       modeloId = notif.FiltrosFav.ModeloId,
                                       tipoId = notif.FiltrosFav.TipoId,
                                       anoMin = notif.FiltrosFav.AnoMin,
                                       anoMax = notif.FiltrosFav.AnoMax,
                                       precoMax = notif.FiltrosFav.PrecoMax 
                                   })" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-search me-1"></i>Ver Resultados
                                    </a>
                                </div>
                            }
                            else if (notif.MarcasFavId.HasValue && notif.MarcasFav != null)
                            {
                                <div class="mt-3">
                                    <a href="@Url.Action("Index", "Anuncios", new { marcaId = notif.MarcasFav.MarcaId })" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-car-front me-1"></i>Ver @notif.MarcasFav.Marca.Nome
                                    </a>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5 bg-white rounded shadow-sm">
                    <div class="mb-3">
                        <i class="bi bi-bell-slash text-muted" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="text-muted">Sem notificações</h5>
                    <p class="text-muted small">Iremos avisá-lo quando houver novidades do seu interesse.</p>
                    <a asp-controller="Anuncios" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="bi bi-search me-2"></i>Explorar Anúncios
                    </a>
                </div>
            }
        </div>
    </div>
</div>
