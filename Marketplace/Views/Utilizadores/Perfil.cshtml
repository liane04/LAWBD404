<script>
    // Função para confirmar eliminação de anúncio
    function confirmarEliminacao(nomeAnuncio) {
        if (confirm('Tem a certeza que deseja eliminar o anúncio "' + nomeAnuncio + '"?\n\nEsta ação não pode ser revertida.')) {
            alert('Anúncio "' + nomeAnuncio + '" eliminado com sucesso!');
            // Aqui seria feito o pedido AJAX para eliminar
        }
    }

    // Função para remover favorito
    function removerFavorito(btn) {
        const card = btn.closest('.favorito-card');
        const titulo = card.querySelector('.favorito-title').textContent;

        if (confirm('Remover "' + titulo + '" dos favoritos?')) {
            card.style.transform = 'scale(0.8)';
            card.style.opacity = '0';
            setTimeout(() => {
                card.closest('.col-md-6').remove();
            }, 300);
        }
    }

    // Função para confirmar eliminação de conta
    function confirmarEliminacaoConta() {
        if (confirm('⚠️ ATENÇÃO! Esta ação é PERMANENTE!\n\nTem a certeza absoluta que deseja eliminar a sua conta?\n\nTodos os seus anúncios, mensagens e dados serão perdidos para sempre.')) {
            if (confirm('Esta é a sua última oportunidade para cancelar.\n\nConfirma a eliminação da conta?')) {
                alert('Pedido de eliminação de conta registado. Receberá um email de confirmação.');
                // Aqui seria feito o pedido para eliminar a conta
            }
        }
    }

    // Toggle dos switches de notificações
    document.querySelectorAll('.form-check-input').forEach(function(checkbox) {
        checkbox.addEventListener('change', function() {
            const label = this.nextElementSibling;
            if (this.checked) {
                label.textContent = 'Ativado';
            } else {
                label.textContent = 'Desativado';
            }
        });
    });
</script>

