@{
    ViewData["Title"] = "Redefinir Palavra-passe";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 404 RIDE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 2rem 0;
        }
    </style>
</head>
<body>
    <!-- Logo no topo -->
    <div class="position-absolute top-0 start-0 p-4">
        <a asp-controller="Home" asp-action="Index">
            <img src="~/imagens/logo.png" alt="404 RIDE" style="height: 50px; width: auto;" />
        </a>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8 col-xl-7">
                <div class="card shadow-lg border-0" style="border-radius: 1.5rem; overflow: hidden;">
                    <div class="row g-0">
                        <!-- Coluna da esquerda - Informação visual -->
                        <div class="col-lg-5 d-none d-lg-flex" style="background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);">
                            <div class="p-5 text-white d-flex flex-column justify-content-between w-100">
                                <div>
                                    <img src="~/imagens/logo_branco.png" alt="404 RIDE" class="mb-4" style="height: 60px; width: auto;" />
                                    <h3 class="fw-bold mb-3">Nova Palavra-passe</h3>
                                    <p style="color: rgba(255,255,255,0.8);">Escolha uma palavra-passe forte e segura para proteger a sua conta.</p>
                                </div>
                                <div>
                                    <div class="mb-3">
                                        <strong class="d-block mb-2"><i class="bi bi-shield-lock-fill me-2"></i>Requisitos:</strong>
                                        <ul class="list-unstyled ps-3">
                                            <li class="mb-1"><i class="bi bi-check2 me-2"></i>Mínimo 8 caracteres</li>
                                            <li class="mb-1"><i class="bi bi-check2 me-2"></i>1 letra maiúscula</li>
                                            <li class="mb-1"><i class="bi bi-check2 me-2"></i>1 letra minúscula</li>
                                            <li class="mb-1"><i class="bi bi-check2 me-2"></i>1 número</li>
                                            <li><i class="bi bi-check2 me-2"></i>3 caracteres únicos</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Coluna da direita - Formulário -->
                        <div class="col-lg-7">
                            <div class="p-4 p-lg-5">
                                @if (ViewBag.Sucesso != null && ViewBag.Sucesso)
                                {
                                    <!-- Success State -->
                                    <div class="text-center">
                                        <div class="mb-4 d-lg-none">
                                            <img src="~/imagens/logo.png" alt="404 RIDE" class="mb-3" style="height: 50px; width: auto;" />
                                        </div>

                                        <div class="mb-4">
                                            <div class="d-flex justify-content-center mb-3">
                                                <div style="width: 80px; height: 80px; border-radius: 50%; background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%); display: flex; align-items: center; justify-content: center;">
                                                    <i class="bi bi-check-circle-fill text-white" style="font-size: 2.5rem;"></i>
                                                </div>
                                            </div>
                                            <h3 class="fw-bold mb-2">Palavra-passe Redefinida!</h3>
                                        </div>

                                        <div class="alert alert-success border-0 shadow-sm" style="border-radius: 0.75rem;">
                                            <p class="mb-0">A sua palavra-passe foi alterada com sucesso.<br />
                                                <strong>Já pode fazer login com a nova palavra-passe.</strong>
                                            </p>
                                        </div>

                                        <div class="d-grid mt-4">
                                            <a href="/Utilizadores/Login" class="btn btn-primary btn-lg" style="border-radius: 0.75rem; background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%); border: none;">
                                                <i class="bi bi-box-arrow-in-right me-2"></i>Ir para Login
                                            </a>
                                        </div>

                                        <p class="text-center text-muted small mt-3" id="countdown">
                                            Será redirecionado automaticamente em <strong id="seconds">5</strong> segundos...
                                        </p>
                                    </div>
                                }
                                else
                                {
                                    <!-- Form State -->
                                    <!-- Header mobile -->
                                    <div class="text-center mb-4 d-lg-none">
                                        <img src="~/imagens/logo.png" alt="404 RIDE" class="mb-3" style="height: 50px; width: auto;" />
                                        <h3 class="fw-bold">Redefinir Palavra-passe</h3>
                                        @if (!string.IsNullOrEmpty(ViewBag.Email))
                                        {
                                            <p class="text-muted">@ViewBag.Email</p>
                                        }
                                    </div>

                                    <!-- Header desktop -->
                                    <div class="mb-4 d-none d-lg-block">
                                        <h3 class="fw-bold mb-2">Redefinir Palavra-passe</h3>
                                        @if (!string.IsNullOrEmpty(ViewBag.Email))
                                        {
                                            <p class="text-muted">Conta: <strong>@ViewBag.Email</strong></p>
                                        }
                                        else
                                        {
                                            <p class="text-muted">Escolha uma nova palavra-passe forte</p>
                                        }
                                    </div>

                                    @if (!string.IsNullOrEmpty(ViewBag.Erro))
                                    {
                                        <div class="alert alert-danger border-0 shadow-sm" style="border-radius: 0.75rem;">
                                            <i class="bi bi-exclamation-circle-fill me-2"></i>@ViewBag.Erro
                                        </div>
                                    }

                                    <!-- Requisitos (mobile) -->
                                    <div class="alert alert-info border-0 shadow-sm d-lg-none mb-4" style="border-radius: 0.75rem;">
                                        <strong class="d-block mb-2"><i class="bi bi-info-circle-fill me-2"></i>Requisitos:</strong>
                                        <ul class="mb-0 small ps-3">
                                            <li>Mínimo 8 caracteres</li>
                                            <li>1 letra maiúscula e 1 minúscula</li>
                                            <li>1 número</li>
                                            <li>3 caracteres únicos</li>
                                        </ul>
                                    </div>

                                    <form method="post" asp-action="RedefinirPassword">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="userId" value="@ViewBag.UserId" />
                                        <input type="hidden" name="token" value="@ViewBag.Token" />

                                        <div class="mb-3">
                                            <label for="password" class="form-label fw-semibold">
                                                <i class="bi bi-lock-fill me-2 text-primary"></i>Nova Palavra-passe
                                            </label>
                                            <input type="password" class="form-control form-control-lg" id="password" name="password"
                                                   placeholder="Insira a nova palavra-passe" required autofocus
                                                   style="border-radius: 0.75rem; border: 2px solid #e5e7eb;" />
                                        </div>

                                        <div class="mb-4">
                                            <label for="confirmPassword" class="form-label fw-semibold">
                                                <i class="bi bi-lock-fill me-2 text-primary"></i>Confirmar Palavra-passe
                                            </label>
                                            <input type="password" class="form-control form-control-lg" id="confirmPassword" name="confirmPassword"
                                                   placeholder="Confirme a nova palavra-passe" required
                                                   style="border-radius: 0.75rem; border: 2px solid #e5e7eb;" />
                                        </div>

                                        <div class="d-grid mb-3">
                                            <button type="submit" class="btn btn-primary btn-lg" style="border-radius: 0.75rem; background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%); border: none;">
                                                <i class="bi bi-check-circle-fill me-2"></i>Redefinir Palavra-passe
                                            </button>
                                        </div>

                                        <div class="d-grid">
                                            <a href="/Utilizadores/Login" class="btn btn-outline-secondary btn-lg" style="border-radius: 0.75rem;">
                                                <i class="bi bi-arrow-left me-2"></i>Voltar ao Login
                                            </a>
                                        </div>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.Sucesso != null && ViewBag.Sucesso)
    {
        <script>
            // Auto-redirect após 5 segundos
            let seconds = 5;
            const countdownElement = document.getElementById('seconds');

            const interval = setInterval(() => {
                seconds--;
                countdownElement.textContent = seconds;

                if (seconds <= 0) {
                    clearInterval(interval);
                    window.location.href = '/Utilizadores/Login';
                }
            }, 1000);
        </script>
    }
</body>
</html>
