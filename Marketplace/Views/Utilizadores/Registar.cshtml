@*@model Marketplace.Models.Utilizador*@

@{
    ViewData["Title"] = "Criar Conta";
}

<div class="auth-container">
    <div class="card shadow-lg">
        <div class="card-body p-5">
            <h2 class="card-title text-center mb-4">Criar Nova Conta</h2>
            <form asp-action="Registar">
                <div class="mb-3">
                    <label for="nome" class="form-label">Nome Completo</label>
                    <input type="text" class="form-control" id="nome" required>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Palavra-passe</label>
                    <input type="password" class="form-control" id="password" required>
                </div>

                <div class="mb-3">
                    <label for="confirm-password" class="form-label">Confirmar Palavra-passe</label>
                    <input type="password" class="form-control" id="confirm-password" required>
                </div>

                <hr class="my-4">

                <div class="mb-4">
                    <p class="form-label">Qual o seu objetivo na plataforma?</p>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="userType" id="typeComprador" value="comprador" checked>
                        <label class="form-check-label" for="typeComprador">
                            Quero apenas comprar
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="userType" id="typeVendedor" value="vendedor">
                        <label class="form-check-label" for="typeVendedor">
                            Quero vender (requer validação)
                        </label>
                    </div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Registar</button>
                </div>
            </form>
            <div class="mt-4 text-center">
                <p class="mb-0">Já tem uma conta? <a asp-controller="Utilizadores" asp-action="Login">Faça login</a></p>
            </div>
        </div>
    </div>
</div>

