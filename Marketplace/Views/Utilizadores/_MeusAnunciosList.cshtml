@model IEnumerable<Marketplace.Models.Anuncio>

@if (Model != null && Model.Any())
{
    foreach (var anuncio in Model)
    {
        var primeiraImagem = anuncio.Imagens?.FirstOrDefault()?.ImagemCaminho ?? "~/imagens/no-image.jpg";

        // Estado dinâmico baseado no anúncio
        var statusClass = anuncio.Estado?.ToLower() ?? "ativo";
        var badgeClass = anuncio.Estado switch
        {
            "Ativo" => "bg-success",
            "Reservado" => "bg-warning",
            "Vendido" => "bg-info",
            "Pausado" => "bg-secondary",
            _ => "bg-success"
        };
        var badgeIcon = anuncio.Estado switch
        {
            "Ativo" => "check-circle-fill",
            "Reservado" => "bookmark-check-fill",
            "Vendido" => "check2-circle",
            "Pausado" => "pause-circle-fill",
            _ => "check-circle-fill"
        };
        var badgeText = anuncio.Estado ?? "Ativo";

        <div class="anuncio-card card shadow-sm border-0 mb-3" data-status="@statusClass" data-id="@anuncio.Id">
            <div class="card-body p-3">
                <div class="row g-3 align-items-center">
                    <div class="col-auto">
                        <div class="anuncio-thumbnail">
                            <img src="@primeiraImagem" alt="@anuncio.Titulo">
                            <span class="anuncio-status-badge badge @badgeClass">
                                <i class="bi bi-@badgeIcon me-1"></i>@badgeText
                            </span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="anuncio-info">
                            <h5 class="anuncio-title mb-1">
                                @anuncio.Titulo
                                @if (anuncio.Destacado && anuncio.DestaqueAte.HasValue && anuncio.DestaqueAte.Value > DateTime.Now)
                                {
                                    <span class="badge bg-warning text-dark ms-2"><i class="bi bi-star-fill me-1"></i>Destaque</span>
                                }
                            </h5>
                            <div class="anuncio-meta">
                                <span class="anuncio-meta-item">
                                    <i class="bi bi-car-front me-1"></i>@anuncio.Marca?.Nome @anuncio.Modelo?.Nome
                                </span>
                                <span class="anuncio-meta-item">
                                    <i class="bi bi-calendar3 me-1"></i>@anuncio.Ano
                                </span>
                                <span class="anuncio-meta-item">
                                    <i class="bi bi-speedometer2 me-1"></i>@(anuncio.Quilometragem?.ToString("N0") ?? "N/A") km
                                </span>
                                <span class="anuncio-meta-item">
                                    <i class="bi bi-eye-fill me-1"></i>@anuncio.NVisualizacoes visualizações
                                </span>
                            </div>
                            <div class="anuncio-price mt-2">
                                <span class="price-label">Preço:</span>
                                <span class="price-value">@anuncio.Preco.ToString("N2")€</span>
                                @if (anuncio.ValorSinal > 0)
                                {
                                    <span class="ms-2 small text-muted">Sinal: @anuncio.ValorSinal.ToString("N2")€</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="anuncio-actions d-flex flex-column gap-2">
                            <div class="d-flex gap-2">
                                <a asp-controller="Anuncios" asp-action="Details" asp-route-id="@anuncio.Id" class="btn btn-sm btn-outline-primary" title="Ver Detalhes">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-controller="Anuncios" asp-action="Edit" asp-route-id="@anuncio.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-controller="Anuncios" asp-action="Delete" asp-route-id="@anuncio.Id" class="btn btn-sm btn-outline-danger" title="Apagar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                            @if (anuncio.Destacado && anuncio.DestaqueAte.HasValue && anuncio.DestaqueAte.Value > DateTime.Now)
                            {
                                <div class="alert alert-warning mb-0 py-2 px-2 w-100" style="font-size: 0.85rem;">
                                    <i class="bi bi-star-fill me-1"></i>
                                    <strong>Destacado</strong><br>
                                    <small>Até @anuncio.DestaqueAte.Value.ToString("dd/MM/yyyy")</small>
                                </div>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-warning w-100 btn-destacar" data-bs-toggle="modal" data-bs-target="#destacarModal" title="Destacar Anúncio">
                                    <i class="bi bi-star-fill me-1"></i>Destacar
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="anuncios-empty text-center py-5">
        <div class="mb-4">
            <i class="bi bi-inbox" style="font-size: 4rem; color: #e2e8f0;"></i>
        </div>
        <h4 class="text-muted mb-2">Nenhum anúncio criado</h4>
        <p class="text-muted mb-4">Comece por criar o seu primeiro anúncio!</p>
        <a asp-controller="Anuncios" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i>Criar Primeiro Anúncio
        </a>
    </div>
}
