@model Marketplace.Models.Visita

@{
    ViewData["Title"] = "Agendar Visita";
    var anuncio = ViewBag.Anuncio as Marketplace.Models.Anuncio;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow animate-card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-calendar-plus"></i>
                        Agendar Visita
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Informações do Anúncio -->
                    @if (anuncio != null)
                    {
                        <div class="alert alert-info mb-4">
                            <div class="row align-items-center">
                                <div class="col-md-3">
                                    @if (anuncio.Imagens?.Any() == true)
                                    {
                                        <img src="@Url.Content(anuncio.Imagens.First().ImagemCaminho)"
                                             class="img-fluid rounded"
                                             alt="@anuncio.Titulo">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                             style="height: 100px;">
                                            <i class="bi bi-car-front fs-1 text-muted"></i>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-9">
                                    <h5 class="mb-2">@anuncio.Titulo</h5>
                                    <p class="mb-1">
                                        <strong>@anuncio.Marca?.Nome @anuncio.Modelo?.Nome</strong>
                                    </p>
                                    @if (!string.IsNullOrEmpty(anuncio.Localizacao))
                                    {
                                        <p class="mb-1">
                                            <i class="bi bi-geo-alt"></i> @anuncio.Localizacao
                                        </p>
                                    }
                                    <p class="mb-0">
                                        <i class="bi bi-person"></i> Vendedor: <strong>@anuncio.Vendedor?.Nome</strong>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Formulário -->
                    <form asp-action="Create" method="post" id="agendarVisitaForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="AnuncioId" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-3">
                            <!-- Data da Visita -->
                            <div class="col-md-6">
                                <label asp-for="Data" class="form-label fw-bold">
                                    <i class="bi bi-calendar3"></i> Data e Hora da Visita
                                </label>
                                <input asp-for="Data"
                                       type="datetime-local"
                                       class="form-control form-control-lg"
                                       min="@ViewBag.MinDate"
                                       required />
                                <div class="form-text">
                                    <i class="bi bi-info-circle"></i>
                                    Selecione uma data e hora futura
                                </div>
                                <span asp-validation-for="Data" class="text-danger"></span>
                            </div>

                            <!-- Observações -->
                            <div class="col-12">
                                <label asp-for="Observacoes" class="form-label fw-bold">
                                    <i class="bi bi-chat-left-text"></i> Observações (opcional)
                                </label>
                                <textarea asp-for="Observacoes"
                                          class="form-control"
                                          rows="4"
                                          maxlength="500"
                                          placeholder="Adicione informações adicionais, perguntas ou pedidos especiais..."></textarea>
                                <div class="form-text">
                                    Ex: "Gostaria de fazer um test-drive", "Tenho interesse em financiamento", etc.
                                </div>
                                <span asp-validation-for="Observacoes" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Informações Importantes -->
                        <div class="alert alert-warning mt-4">
                            <h6 class="alert-heading">
                                <i class="bi bi-exclamation-triangle"></i> Informações Importantes
                            </h6>
                            <ul class="mb-0">
                                <li>O vendedor será notificado por email sobre a sua visita</li>
                                <li>Aguarde a confirmação do vendedor antes de se deslocar</li>
                                <li>Pode cancelar ou reagendar a visita a qualquer momento</li>
                                <li>Seja pontual e educado durante a visita</li>
                            </ul>
                        </div>

                        <!-- Botões -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a href="@Url.Action("Details", "Anuncios", new { id = Model.AnuncioId })"
                               class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                                <i class="bi bi-calendar-check"></i> Agendar Visita
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Dicas -->
            <div class="card mt-4 border-0 bg-light animate-card" style="animation-delay: 0.2s">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-lightbulb text-warning"></i> Dicas para uma Boa Visita
                    </h5>
                    <div class="row">
                        <div class="col-md-6">
                            <ul>
                                <li>Prepare uma lista de perguntas sobre o veículo</li>
                                <li>Verifique o estado geral da viatura</li>
                                <li>Peça para ver os documentos do veículo</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul>
                                <li>Faça um test-drive, se possível</li>
                                <li>Verifique o histórico de manutenção</li>
                                <li>Tire fotos para análise posterior</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Loading Overlay -->
<div class="loading-overlay" id="loadingOverlay">
    <div class="text-center text-white">
        <div class="spinner mb-3"></div>
        <h4>A agendar visita...</h4>
        <p class="text-white-50">Aguarde um momento</p>
    </div>
</div>

@section Styles {
    <style>
        /* Animações */
        @@keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.05);
            }
        }

        @@keyframes spin {
            to { transform: rotate(360deg); }
        }

        .animate-card {
            animation: slideInUp 0.6s ease-out both;
        }

        .form-control:focus, .form-select:focus, textarea:focus {
            border-color: #2563eb;
            box-shadow: 0 0 0 0.25rem rgba(37, 99, 235, 0.15);
            transform: scale(1.01);
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            animation: pulse 0.6s ease-in-out;
            transform: translateY(-2px);
        }

        .card {
            transition: all 0.3s ease;
        }

        .card:hover {
            box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
        }

        /* Loading overlay */
        .loading-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.8);
            z-index: 9999;
            align-items: center;
            justify-content: center;
        }

        .loading-overlay.active {
            display: flex;
        }

        .spinner {
            width: 60px;
            height: 60px;
            border: 6px solid rgba(255, 255, 255, 0.3);
            border-top-color: #2563eb;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        /* Input animations */
        input[type="datetime-local"], textarea {
            transition: all 0.3s ease;
        }

        input[type="datetime-local"]:hover, textarea:hover {
            border-color: #6c757d;
        }

        /* Character counter */
        .char-count {
            text-align: right;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Definir data mínima (1 hora no futuro)
        const now = new Date();
        now.setHours(now.getHours() + 1);
        const minDate = now.toISOString().slice(0, 16);
        const dateInput = document.querySelector('input[type="datetime-local"]');
        if (dateInput) {
            dateInput.min = minDate;
        }

        // Sugerir horário comercial (9h-18h)
        if (dateInput) {
            dateInput.addEventListener('change', function() {
                const selected = new Date(this.value);
                const hour = selected.getHours();

                if (hour < 9 || hour >= 18) {
                    if (confirm('A hora selecionada está fora do horário comercial (9h-18h). Deseja continuar?')) {
                        // OK
                    } else {
                        this.value = '';
                    }
                }
            });
        }

        // Animação no submit do formulário
        const form = document.getElementById('agendarVisitaForm');
        if (form) {
            form.addEventListener('submit', function(e) {
                // Verificar se o formulário é válido
                if (!form.checkValidity()) {
                    return; // Deixar a validação padrão acontecer
                }

                // Mostrar overlay de loading
                const overlay = document.getElementById('loadingOverlay');
                overlay.classList.add('active');

                // Desabilitar o botão de submit
                const submitBtn = document.getElementById('submitBtn');
                if (submitBtn) {
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>A processar...';
                }
            });
        }

        // Contador de caracteres para observações
        const observacoes = document.querySelector('textarea[name="Observacoes"]');
        if (observacoes) {
            // Criar elemento de contador
            const feedback = document.createElement('div');
            feedback.className = 'form-text char-count';
            observacoes.parentElement.appendChild(feedback);

            observacoes.addEventListener('input', function() {
                const charCount = this.value.length;
                const maxChars = 500;

                feedback.textContent = `${charCount}/${maxChars} caracteres`;
                feedback.style.color = charCount > 450 ? (charCount > maxChars ? 'red' : 'orange') : '#6c757d';
            });

            // Inicializar contador
            observacoes.dispatchEvent(new Event('input'));
        }
    </script>
}
