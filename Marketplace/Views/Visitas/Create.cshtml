@model Marketplace.Models.Visita

@{
    ViewData["Title"] = "Agendar Visita";
    var anuncio = ViewBag.Anuncio as Marketplace.Models.Anuncio;
    var minDate = ViewBag.MinDate as string;
    var primeiraImagem = anuncio?.Imagens?.FirstOrDefault()?.ImagemCaminho ?? "/imagens/no-image.jpg";
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="bg-light border-bottom">
    <div class="container">
        <ol class="breadcrumb py-3 mb-0">
            <li class="breadcrumb-item"><a href="/"><i class="bi bi-house-door-fill me-1"></i>Início</a></li>
            <li class="breadcrumb-item"><a asp-controller="Anuncios" asp-action="Index">Anúncios</a></li>
            <li class="breadcrumb-item"><a asp-controller="Anuncios" asp-action="Details" asp-route-id="@anuncio?.Id">@anuncio?.Titulo</a></li>
            <li class="breadcrumb-item active" aria-current="page">Agendar Visita</li>
        </ol>
    </div>
</nav>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Cabeçalho -->
            <div class="text-center mb-4">
                <div class="mb-3">
                    <i class="bi bi-calendar-check-fill text-primary" style="font-size: 3rem;"></i>
                </div>
                <h1 class="h2 fw-bold text-primary mb-2">Agendar Visita</h1>
                <p class="text-muted">Marque uma data e hora para ver o veículo pessoalmente</p>
            </div>

            <!-- Informações -->
            <div class="alert alert-info border-info d-flex align-items-start mb-4">
                <i class="bi bi-info-circle-fill me-3 fs-4 flex-shrink-0"></i>
                <div>
                    <h6 class="alert-heading fw-bold mb-2">Como funciona?</h6>
                    <ul class="mb-0 small ps-3">
                        <li>Escolha uma data e hora convenientes para si</li>
                        <li>O vendedor receberá uma notificação e confirmará a disponibilidade</li>
                        <li>Receberá uma confirmação por email com todos os detalhes</li>
                        <li>Aproveite para fazer test-drive e verificar a documentação</li>
                    </ul>
                </div>
            </div>

            <!-- Resumo do Veículo -->
            <div class="card shadow-sm border-primary mb-4">
                <div class="card-header bg-primary bg-opacity-10 border-primary">
                    <h5 class="mb-0 text-primary">
                        <i class="bi bi-car-front-fill me-2"></i>Veículo Selecionado
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3 align-items-center">
                        <div class="col-auto">
                            <img src="@primeiraImagem" alt="@anuncio?.Titulo" class="rounded shadow-sm"
                                 style="width: 120px; height: 90px; object-fit: cover;">
                        </div>
                        <div class="col">
                            <h5 class="mb-2 fw-bold">@anuncio?.Titulo</h5>
                            <p class="text-muted mb-2 small">
                                <i class="bi bi-calendar3 me-1"></i>@anuncio?.Ano •
                                <i class="bi bi-speedometer2 me-1"></i>@(anuncio?.Quilometragem?.ToString("N0") ?? "N/A") km •
                                <i class="bi bi-fuel-pump-fill me-1"></i>@anuncio?.Combustivel?.Tipo •
                                <i class="bi bi-gear-fill me-1"></i>@anuncio?.Caixa
                            </p>
                            <p class="text-success fw-bold fs-4 mb-0">
                                <i class="bi bi-currency-euro me-1"></i>@anuncio?.Preco.ToString("N0")
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Informações do Vendedor -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">
                        <i class="bi bi-person-badge text-primary me-2"></i>Vendedor
                    </h6>
                    <div class="d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(anuncio?.Vendedor?.ImagemPerfil))
                        {
                            <img src="@anuncio.Vendedor.ImagemPerfil" class="rounded-circle me-3"
                                 style="width: 60px; height: 60px; object-fit: cover;" alt="@anuncio.Vendedor.Nome">
                        }
                        else
                        {
                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3"
                                 style="width: 60px; height: 60px; font-size: 1.5rem; font-weight: bold;">
                                @(anuncio?.Vendedor?.Nome?.Substring(0, 1) ?? "V")
                            </div>
                        }
                        <div>
                            <h6 class="mb-1">@(anuncio?.Vendedor?.Nome ?? "Vendedor")</h6>
                            <p class="text-muted mb-0 small">
                                @if (!string.IsNullOrEmpty(anuncio?.Localizacao))
                                {
                                    <i class="bi bi-geo-alt-fill text-primary me-1"></i>@anuncio.Localizacao
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Formulário -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar2-week text-primary me-2"></i>Detalhes da Visita
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="AnuncioId" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Data e Hora -->
                        <div class="mb-4">
                            <label asp-for="Data" class="form-label fw-semibold">
                                <i class="bi bi-calendar-event me-1"></i>Data e Hora da Visita
                                <span class="text-danger">*</span>
                            </label>

                            @{
                                var temDisponibilidades = ViewBag.TemDisponibilidades as bool? ?? false;
                                var slotsDisponiveis = ViewBag.SlotsDisponiveis as List<DateTime> ?? new List<DateTime>();
                            }

                            @if (temDisponibilidades && slotsDisponiveis.Any())
                            {
                                <select asp-for="Data" class="form-select form-select-lg" required>
                                    <option value="">Selecione uma data e hora...</option>
                                    @foreach (var slot in slotsDisponiveis.Take(50))
                                    {
                                        var dataFormatada = slot.ToString("dd/MM/yyyy");
                                        var horaFormatada = slot.ToString("HH:mm");
                                        var diaSemana = slot.ToString("dddd", new System.Globalization.CultureInfo("pt-PT"));
                                        <option value="@slot.ToString("yyyy-MM-ddTHH:mm")">
                                            @diaSemana, @dataFormatada às @horaFormatada
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="Data" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>
                                    @if (slotsDisponiveis.Count > 50)
                                    {
                                        <text>Mostrando os próximos 50 horários disponíveis de @slotsDisponiveis.Count no total.</text>
                                    }
                                    else
                                    {
                                        <text>@slotsDisponiveis.Count horário(s) disponível(is) nos próximos 30 dias.</text>
                                    }
                                </div>
                            }
                            else if (!temDisponibilidades)
                            {
                                <div class="alert alert-warning mb-3">
                                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                    O vendedor ainda não configurou seus horários de disponibilidade. Por favor, escolha uma data e hora e aguarde a confirmação do vendedor.
                                </div>
                                <input asp-for="Data" type="datetime-local" class="form-control form-control-lg"
                                       min="@minDate" required />
                                <span asp-validation-for="Data" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Escolha uma data com pelo menos 1 hora de antecedência. O vendedor confirmará a disponibilidade.
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info mb-3">
                                    <i class="bi bi-info-circle-fill me-2"></i>
                                    Não há horários disponíveis nos próximos 30 dias. Por favor, contacte o vendedor diretamente.
                                </div>
                                <input asp-for="Data" type="datetime-local" class="form-control form-control-lg"
                                       min="@minDate" required />
                                <span asp-validation-for="Data" class="text-danger small"></span>
                            }
                        </div>

                        <!-- Observações -->
                        <div class="mb-4">
                            <label asp-for="Observacoes" class="form-label fw-semibold">
                                <i class="bi bi-chat-left-text me-1"></i>Observações (Opcional)
                            </label>
                            <textarea asp-for="Observacoes" class="form-control" rows="4"
                                      placeholder="Ex: Gostaria de fazer test-drive. Tenho interesse em verificar toda a documentação do veículo."></textarea>
                            <span asp-validation-for="Observacoes" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Deixe uma mensagem para o vendedor (ex: interesse em test-drive, verificar documentação, etc.)
                            </div>
                        </div>

                        <!-- Informações Importantes -->
                        <div class="alert alert-warning border-warning mb-4">
                            <h6 class="alert-heading fw-bold mb-2">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>Importante
                            </h6>
                            <ul class="mb-0 small">
                                <li>Esta visita está sujeita a confirmação do vendedor</li>
                                <li>Receberá um email de confirmação quando o vendedor aprovar</li>
                                <li>Pode cancelar ou reagendar a visita a qualquer momento no seu perfil</li>
                                <li>Leve um documento de identificação válido</li>
                            </ul>
                        </div>

                        <!-- Botões -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-controller="Anuncios" asp-action="Details" asp-route-id="@anuncio?.Id"
                               class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Voltar ao Anúncio
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-calendar-check-fill me-2"></i>Confirmar Agendamento
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Dicas -->
            <div class="card shadow-sm border-0 bg-light mt-4">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">
                        <i class="bi bi-lightbulb text-warning me-2"></i>Dicas para a Visita
                    </h6>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex">
                                <i class="bi bi-check-circle-fill text-success me-2 flex-shrink-0"></i>
                                <small>Verifique o estado geral da carroçaria e pintura</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex">
                                <i class="bi bi-check-circle-fill text-success me-2 flex-shrink-0"></i>
                                <small>Peça para ver o livro de revisões</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex">
                                <i class="bi bi-check-circle-fill text-success me-2 flex-shrink-0"></i>
                                <small>Faça test-drive em diferentes condições de estrada</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex">
                                <i class="bi bi-check-circle-fill text-success me-2 flex-shrink-0"></i>
                                <small>Confirme que o número de chassis corresponde à documentação</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
