@model Marketplace.Models.Visita

@{
    ViewData["Title"] = "Editar Visita";
    var anuncio = ViewBag.Anuncio as Marketplace.Models.Anuncio;
    var minDate = ViewBag.MinDate as string;
    var primeiraImagem = anuncio?.Imagens?.FirstOrDefault()?.ImagemCaminho ?? "/imagens/no-image.jpg";
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="bg-light border-bottom">
    <div class="container">
        <ol class="breadcrumb py-3 mb-0">
            <li class="breadcrumb-item"><a href="/"><i class="bi bi-house-door-fill me-1"></i>Início</a></li>
            <li class="breadcrumb-item"><a asp-controller="Visitas" asp-action="Index">Minhas Visitas</a></li>
            <li class="breadcrumb-item"><a asp-controller="Visitas" asp-action="Details" asp-route-id="@Model.Id">Visita #@Model.Id</a></li>
            <li class="breadcrumb-item active" aria-current="page">Editar</li>
        </ol>
    </div>
</nav>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Cabeçalho -->
            <div class="text-center mb-4">
                <div class="mb-3">
                    <i class="bi bi-pencil-square text-warning" style="font-size: 3rem;"></i>
                </div>
                <h1 class="h2 fw-bold text-primary mb-2">Editar Visita</h1>
                <p class="text-muted">Altere a data, hora ou observações da sua visita</p>
            </div>

            <!-- Alerta Informativo -->
            <div class="alert alert-info border-info d-flex align-items-start mb-4">
                <i class="bi bi-info-circle-fill me-3 fs-4 flex-shrink-0"></i>
                <div>
                    <h6 class="alert-heading fw-bold mb-2">Atenção</h6>
                    <ul class="mb-0 small ps-3">
                        <li>Ao alterar a data da visita, o vendedor será notificado das mudanças</li>
                        <li>Se a visita já foi confirmada, poderá voltar ao estado "Pendente"</li>
                        <li>Escolha uma data com pelo menos 1 hora de antecedência</li>
                    </ul>
                </div>
            </div>

            <!-- Resumo do Veículo -->
            <div class="card shadow-sm border-primary mb-4">
                <div class="card-header bg-primary bg-opacity-10 border-primary">
                    <h5 class="mb-0 text-primary">
                        <i class="bi bi-car-front-fill me-2"></i>Veículo
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3 align-items-center">
                        <div class="col-auto">
                            <img src="@primeiraImagem" alt="@anuncio?.Titulo" class="rounded shadow-sm"
                                 style="width: 120px; height: 90px; object-fit: cover;">
                        </div>
                        <div class="col">
                            <h5 class="mb-2 fw-bold">@anuncio?.Titulo</h5>
                            <p class="text-muted mb-2 small">
                                <i class="bi bi-calendar3 me-1"></i>@anuncio?.Ano •
                                <i class="bi bi-speedometer2 me-1"></i>@(anuncio?.Quilometragem?.ToString("N0") ?? "N/A") km •
                                <i class="bi bi-fuel-pump-fill me-1"></i>@anuncio?.Combustivel?.Tipo •
                                <i class="bi bi-gear-fill me-1"></i>@anuncio?.Caixa
                            </p>
                            <p class="text-success fw-bold fs-5 mb-0">
                                <i class="bi bi-currency-euro me-1"></i>@anuncio?.Preco.ToString("N0")
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Formulário -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar2-week text-primary me-2"></i>Alterar Detalhes da Visita
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="AnuncioId" />
                        <input type="hidden" asp-for="CompradorId" />
                        <input type="hidden" asp-for="VendedorId" />
                        <input type="hidden" asp-for="ReservaId" />
                        <input type="hidden" asp-for="Estado" />
                        <input type="hidden" asp-for="DataCriacao" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Data Atual vs Nova Data -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="border rounded p-3 bg-light">
                                    <h6 class="text-muted small mb-2">
                                        <i class="bi bi-clock-history text-muted me-1"></i>Data Atual
                                    </h6>
                                    <p class="mb-0 fw-bold">
                                        @Model.Data.ToString("dd/MM/yyyy 'às' HH:mm")
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="border rounded p-3 bg-warning bg-opacity-10">
                                    <h6 class="text-muted small mb-2">
                                        <i class="bi bi-arrow-right text-warning me-1"></i>Estado Atual
                                    </h6>
                                    <p class="mb-0 fw-bold">
                                        @if (Model.Estado == "Pendente")
                                        {
                                            <span class="text-warning">Pendente</span>
                                        }
                                        else if (Model.Estado == "Confirmada")
                                        {
                                            <span class="text-success">Confirmada</span>
                                        }
                                        else if (Model.Estado == "Cancelada")
                                        {
                                            <span class="text-danger">Cancelada</span>
                                        }
                                        else if (Model.Estado == "Concluída")
                                        {
                                            <span class="text-primary">Concluída</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Nova Data e Hora -->
                        <div class="mb-4">
                            <label asp-for="Data" class="form-label fw-semibold">
                                <i class="bi bi-calendar-event me-1"></i>Nova Data e Hora da Visita
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Data" type="datetime-local" class="form-control form-control-lg"
                                   min="@minDate" required />
                            <span asp-validation-for="Data" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Escolha uma nova data com pelo menos 1 hora de antecedência.
                            </div>
                        </div>

                        <!-- Observações -->
                        <div class="mb-4">
                            <label asp-for="Observacoes" class="form-label fw-semibold">
                                <i class="bi bi-chat-left-text me-1"></i>Observações (Opcional)
                            </label>
                            <textarea asp-for="Observacoes" class="form-control" rows="4"
                                      placeholder="Ex: Gostaria de fazer test-drive. Tenho interesse em verificar toda a documentação do veículo."></textarea>
                            <span asp-validation-for="Observacoes" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Atualize ou adicione informações relevantes para o vendedor.
                            </div>
                        </div>

                        <!-- Informações de Auditoria -->
                        @if (Model.DataCriacao != default(DateTime))
                        {
                            <div class="alert alert-light border mb-4">
                                <small class="text-muted">
                                    <i class="bi bi-calendar-plus me-1"></i>
                                    <strong>Visita criada em:</strong> @Model.DataCriacao.ToString("dd/MM/yyyy 'às' HH:mm")
                                    @if (Model.DataAtualizacao.HasValue)
                                    {
                                        <br />
                                        <i class="bi bi-pencil-square me-1"></i>
                                        <strong>Última atualização:</strong> @Model.DataAtualizacao.Value.ToString("dd/MM/yyyy 'às' HH:mm")
                                    }
                                </small>
                            </div>
                        }

                        <!-- Alerta de Notificação -->
                        <div class="alert alert-warning border-warning mb-4">
                            <h6 class="alert-heading fw-bold mb-2">
                                <i class="bi bi-bell-fill me-2"></i>O vendedor será notificado
                            </h6>
                            <p class="mb-0 small">
                                Ao salvar as alterações, o vendedor receberá um email automático com os novos detalhes da visita.
                            </p>
                        </div>

                        <!-- Botões -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-controller="Visitas" asp-action="Details" asp-route-id="@Model.Id"
                               class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg px-5">
                                <i class="bi bi-check-circle-fill me-2"></i>Guardar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Dica -->
            <div class="card shadow-sm border-0 bg-light mt-4">
                <div class="card-body">
                    <h6 class="fw-bold mb-2">
                        <i class="bi bi-lightbulb text-warning me-2"></i>Dica
                    </h6>
                    <p class="mb-0 small text-muted">
                        Se precisar cancelar definitivamente esta visita, pode fazê-lo na página de detalhes.
                        Lá também pode ver o histórico completo de alterações.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
